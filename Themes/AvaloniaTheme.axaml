<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Styles.Resources>
        <ResourceDictionary>
            <!-- Design Tokens -->
            <SolidColorBrush x:Key="AccentBrush" Color="#0078D4"/>
            <SolidColorBrush x:Key="AccentSecondaryBrush" Color="#00A3FF"/>
            <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#1E1E1E"/>
            <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#252526"/>
            <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="#2D2D2D"/>
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="#A0A0A0"/>
            <SolidColorBrush x:Key="BorderBrush" Color="#3E3E3E"/>
            
            <FontFamily x:Key="InterFont">avares://Avalonia.Fonts.Inter/Assets#Inter</FontFamily>
            <FontFamily x:Key="CodeFont">JetBrains Mono, DejaVu Sans Mono, Menlo, Consolas, monospace</FontFamily>
        </ResourceDictionary>
    </Styles.Resources>
    
    <!-- Window Style -->
    <Style Selector="Window">
        <Setter Property="Background" Value="{StaticResource PrimaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontFamily" Value="{StaticResource InterFont}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>
    
    <!-- Primary Button Style (Blue Gradient) -->
    <Style Selector="Button.primary">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background">
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                <GradientStop Color="#0078D4" Offset="0"/>
                <GradientStop Color="#0063B1" Offset="1"/>
            </LinearGradientBrush>
        </Setter>
    </Style>
    
    <Style Selector="Button.primary:pointerover">
        <Setter Property="Background">
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                <GradientStop Color="#1084D7" Offset="0"/>
                <GradientStop Color="#0078D4" Offset="1"/>
            </LinearGradientBrush>
        </Setter>
    </Style>
    
    <Style Selector="Button.primary:pressed">
        <Setter Property="Background">
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                <GradientStop Color="#0063B1" Offset="0"/>
                <GradientStop Color="#005A9E" Offset="1"/>
            </LinearGradientBrush>
        </Setter>
    </Style>
    
    <!-- Navigation Button Style -->
    <Style Selector="Button.nav">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    
    <Style Selector="Button.nav:pointerover">
        <Setter Property="Background" Value="{StaticResource SecondaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    
    <Style Selector="Button.nav:pressed">
        <Setter Property="Background" Value="{StaticResource TertiaryBackgroundBrush}"/>
    </Style>

    <Style Selector="Button.nav.selected">
        <Setter Property="Background" Value="{StaticResource SecondaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style Selector="Button.nav.selected Border#Glow">
        <Setter Property="IsVisible" Value="True"/>
        <Setter Property="BoxShadow" Value="0 0 15 0 #400078D4"/>
    </Style>
    
    <!-- Default Button Style -->
    <Style Selector="Button">
        <Setter Property="Background" Value="{StaticResource TertiaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    
    <Style Selector="Button:pointerover">
        <Setter Property="Background" Value="#3E3E3E"/>
    </Style>
    
    <Style Selector="Button:pressed">
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
    </Style>
    
    <!-- TextBox Style -->
    <Style Selector="TextBox">
        <Setter Property="Background" Value="{StaticResource TertiaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>
    
    <Style Selector="TextBox:focus">
        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
    </Style>
    
    <!-- CheckBox Style -->
    <Style Selector="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
    </Style>
    
    <!-- DataGrid Style -->
    <Style Selector="DataGrid">
        <Setter Property="Background" Value="{StaticResource PrimaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="GridLinesVisibility" Value="None"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
    <!-- ListBox Style -->
    <Style Selector="ListBox">
        <Setter Property="Background" Value="{StaticResource PrimaryBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>
    
    <Style Selector="ListBoxItem">
        <Setter Property="Padding" Value="8"/>
    </Style>
    
    <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource SecondaryBackgroundBrush}"/>
    </Style>
    
    <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="{StaticResource TertiaryBackgroundBrush}"/>
    </Style>
    
    <!-- Chip Style (for filter buttons) -->
    <Style Selector="ToggleButton.chip">
        <Setter Property="Background" Value="#2D2D2D"/>
        <Setter Property="Foreground" Value="#A0A0A0"/>
        <Setter Property="BorderBrush" Value="#3E3E3E"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>
    
    <Style Selector="ToggleButton.chip:pointerover">
        <Setter Property="Background" Value="#3E3E3E"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style Selector="ToggleButton.chip:checked">
        <Setter Property="Background" Value="#0078D4"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#0078D4"/>
    </Style>
    
    <!-- Icon Button Style -->
    <Style Selector="Button.icon-button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#A0A0A0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="40"/>
    </Style>
    
    <Style Selector="Button.icon-button:pointerover">
        <Setter Property="Background" Value="#2D2D2D"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style Selector="Button.icon-button:pressed">
        <Setter Property="Background" Value="#3E3E3E"/>
    </Style>

    <!-- ScrollBar Polish -->
    <Style Selector="ScrollBar">
        <Setter Property="AllowExternalArrowKeys" Value="True"/>
    </Style>

    <Style Selector="ScrollBar:vertical">
        <Setter Property="Width" Value="8"/>
        <Setter Property="MinWidth" Value="8"/>
    </Style>

    <Style Selector="ScrollBar:horizontal">
        <Setter Property="Height" Value="8"/>
        <Setter Property="MinHeight" Value="8"/>
    </Style>

    <Style Selector="ScrollBar /template/ Thumb">
        <Setter Property="Background" Value="#40FFFFFF"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="MinHeight" Value="20"/>
        <Setter Property="MinWidth" Value="20"/>
    </Style>

    <Style Selector="ScrollBar /template/ Thumb:pointerover">
        <Setter Property="Background" Value="#60FFFFFF"/>
    </Style>

    <Style Selector="ScrollBar /template/ Thumb:pressed">
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
    </Style>

    <Style Selector="ScrollBar /template/ RepeatButton">
        <Setter Property="IsVisible" Value="False"/>
    </Style>

    <!-- Skeleton Shimmer Effect -->
    <Style Selector="Border.skeleton">
        <Setter Property="Background">
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
                <GradientStop Offset="0" Color="#1AFFFFFF"/>
                <GradientStop Offset="0.5" Color="#2AFFFFFF"/>
                <GradientStop Offset="1" Color="#1AFFFFFF"/>
            </LinearGradientBrush>
        </Setter>
        <Setter Property="CornerRadius" Value="4"/>
        <Style.Animations>
            <Animation Duration="0:0:1.5" IterationCount="Infinite">
                <KeyFrame KeyTime="0:0:0">
                    <Setter Property="Background">
                        <LinearGradientBrush StartPoint="-100%,0%" EndPoint="0%,0%">
                            <GradientStop Offset="0" Color="#1AFFFFFF"/>
                            <GradientStop Offset="0.5" Color="#2AFFFFFF"/>
                            <GradientStop Offset="1" Color="#1AFFFFFF"/>
                        </LinearGradientBrush>
                    </Setter>
                </KeyFrame>
                <KeyFrame KeyTime="0:0:1.5">
                    <Setter Property="Background">
                        <LinearGradientBrush StartPoint="100%,0%" EndPoint="200%,0%">
                            <GradientStop Offset="0" Color="#1AFFFFFF"/>
                            <GradientStop Offset="0.5" Color="#2AFFFFFF"/>
                            <GradientStop Offset="1" Color="#1AFFFFFF"/>
                        </LinearGradientBrush>
                    </Setter>
                </KeyFrame>
            </Animation>
        </Style.Animations>
    </Style>

    <!-- Ghost Row for Loading States -->
    <Style Selector="StackPanel.ghost-row">
        <Setter Property="Spacing" Value="12"/>
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>
    
</Styles>
