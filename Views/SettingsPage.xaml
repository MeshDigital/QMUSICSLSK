<Page x:Class="SLSKDONET.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsPage">

    <ScrollViewer Background="{StaticResource BackgroundBrush}" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Download Settings Group -->
            <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="16"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="0,0,0,16">
                <StackPanel>
                    <Label Content="Download Settings" Style="{StaticResource ModernLabelStyle}" 
                           FontSize="{StaticResource FontSizeMedium}" FontWeight="Bold" Margin="0,0,0,12"/>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Download Folder:" Style="{StaticResource ModernLabelStyle}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <ui:TextBox IsReadOnly="True" Text="{Binding DownloadPath}" Margin="0,0,8,0" Width="300"/>
                            <ui:Button Content="Browse..." Command="{Binding BrowseDownloadPathCommand}" Appearance="Secondary" />
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Shared Folder:" Style="{StaticResource ModernLabelStyle}"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <ui:TextBox IsReadOnly="True" Text="{Binding SharedFolderPath}" Margin="0,0,8,0" Width="300"/>
                            <ui:Button Content="Browse..." Command="{Binding BrowseSharedFolderCommand}" Appearance="Secondary" />
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Max Concurrent Downloads:" Style="{StaticResource ModernLabelStyle}"/>
                        <ui:TextBox Grid.Column="1" Text="{Binding MaxConcurrentDownloads}"/>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="File Name Format:" Style="{StaticResource ModernLabelStyle}"/>
                        <ui:TextBox Grid.Column="1" Text="{Binding FileNameFormat}"
                                 ToolTip="Placeholders: {artist}, {title}, {album}, {filename}, {bitrate}, {format}, {length}, {user}"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Prevent Duplicate Downloads:" Style="{StaticResource ModernLabelStyle}"/>
                        <CheckBox Grid.Column="1" IsChecked="{Binding CheckForDuplicates, Mode=TwoWay}" 
                                  VerticalAlignment="Center" Style="{StaticResource ModernCheckBoxStyle}"
                                  ToolTip="If checked, will not add tracks to the queue that already exist in your Library."/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Filter Defaults Group -->
            <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="16"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="0,0,0,16">
                <StackPanel>
                    <Label Content="Default Search Filters" Style="{StaticResource ModernLabelStyle}" 
                           FontSize="{StaticResource FontSizeMedium}" FontWeight="Bold" Margin="0,0,0,12"/>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Min Bitrate:" Style="{StaticResource ModernLabelStyle}"/>
                        <ui:TextBox Grid.Column="1" Text="{Binding MinBitrate}" Margin="0,0,8,0"/>
                        <Label Grid.Column="2" Content="kbps" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Max Bitrate:" Style="{StaticResource ModernLabelStyle}"/>
                        <ui:TextBox Grid.Column="1" Text="{Binding MaxBitrate}" Margin="0,0,8,0"/>
                        <Label Grid.Column="2" Content="kbps" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Preferred Formats:" Style="{StaticResource ModernLabelStyle}"/>
                        <ui:TextBox Grid.Column="1" Text="{Binding PreferredFormats}" 
                                 ToolTip="Comma-separated list (e.g., mp3,flac,aac)"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Spotify Settings Group -->
            <Border Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="16"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="0,0,0,16">
                <StackPanel>
                    <Label Content="Spotify Integration" Style="{StaticResource ModernLabelStyle}" 
                           FontSize="{StaticResource FontSizeMedium}" FontWeight="Bold" Margin="0,0,0,12"/>

                    <TextBlock Text="By default, Spotify playlists are imported using public scraping. For more reliable access and to import private playlists or 'Liked Songs', you can provide your own Spotify API credentials."
                               TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12"/>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Use Spotify API (instead of public scraping):" Style="{StaticResource ModernLabelStyle}"/>
                        <CheckBox Grid.Column="1" IsChecked="{Binding UseSpotifyApi, Mode=TwoWay}" 
                                  VerticalAlignment="Center" Style="{StaticResource ModernCheckBoxStyle}"
                                  ToolTip="If checked, the application will use your API credentials below instead of public scraping."/>
                    </Grid>

                    <Grid Margin="0,0,0,12" IsEnabled="{Binding UseSpotifyApi}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Spotify Client ID:" Style="{StaticResource ModernLabelStyle}"/>
                        <ui:TextBox Grid.Column="1" Text="{Binding SpotifyClientId}"/>
                    </Grid>

                    <Grid IsEnabled="{Binding UseSpotifyApi}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Spotify Client Secret:" Style="{StaticResource ModernLabelStyle}"/>
                        <ui:TextBox Grid.Column="1" Text="{Binding SpotifyClientSecret}"
                                 ToolTip="Your secret is encrypted and stored securely on your machine."/>
                    </Grid>

                </StackPanel>
            </Border>

            <!-- Save Button -->
            <ui:Button Content="Save Settings" Appearance="Primary" Icon="{ui:SymbolIcon Save24}"
                       HorizontalAlignment="Left" Command="{Binding SaveSettingsCommand}" />
        </StackPanel>
    </ScrollViewer>
</Page>