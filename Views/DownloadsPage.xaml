<Page x:Class="SLSKDONET.Views.DownloadsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="DownloadsPage">

    <Grid Background="{StaticResource BackgroundBrush}" Margin="20">
        <!-- Simple DataGrid with minimal bindings to avoid BAML errors -->
        <DataGrid ItemsSource="{Binding Downloads}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Foreground="{StaticResource TextBrush}"
                  RowBackground="{StaticResource SecondaryBackgroundBrush}">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
                    <Setter Property="Padding" Value="8"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            
            <DataGrid.Columns>
                <!-- Status -->
                <DataGridTextColumn Header="Status" 
                                    Binding="{Binding State}" 
                                    Width="100"/>

                <!-- Artist -->
                <DataGridTextColumn Header="Artist" 
                                    Binding="{Binding Track.Artist}" 
                                    Width="150"/>

                <!-- Title -->
                <DataGridTextColumn Header="Title" 
                                    Binding="{Binding Track.Title}" 
                                    Width="*" 
                                    MinWidth="200"/>

                <!-- Progress -->
                <DataGridTextColumn Header="Progress" 
                                    Binding="{Binding Progress, StringFormat={}{0:P0}}" 
                                    Width="100"/>

                <!-- Speed -->
                <DataGridTextColumn Header="Speed (bps)" 
                                    Binding="{Binding SpeedBps, StringFormat={}{0:N0}}" 
                                    Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>