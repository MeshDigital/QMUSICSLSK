<Page x:Class="SLSKDONET.Views.LibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:viewmodels="clr-namespace:SLSKDONET.ViewModels"
      xmlns:converters="clr-namespace:SLSKDONET.Converters"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance Type=viewmodels:LibraryViewModel}"
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="LibraryPage">

    <Grid Background="#1E1E1E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>  <!-- Master List: Projects -->
            <ColumnDefinition Width="Auto"/> <!-- Splitter -->
            <ColumnDefinition Width="*"/>    <!-- Detail View: Tracks -->
        </Grid.ColumnDefinitions>

        <!-- MASTER LIST: Projects/Import History -->
        <Border Grid.Column="0" Background="#252526" BorderBrush="#404040" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="ðŸ“‚ Import History" 
                           FontSize="16" FontWeight="Bold" 
                           Foreground="White" Margin="16,12"/>
                
                <ListBox Grid.Row="1" 
                         ItemsSource="{Binding AllProjects}" 
                         SelectedItem="{Binding SelectedProject}"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#3A3A3A"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="Transparent" 
                                    Margin="8,4" Padding="12,10" 
                                    CornerRadius="4">
                                <StackPanel>
                                    <TextBlock Text="{Binding SourceTitle}" 
                                               FontWeight="SemiBold" 
                                               TextTrimming="CharacterEllipsis"
                                               Foreground="White"/>
                                    <TextBlock Foreground="#A0A0A0" FontSize="11" Margin="0,2,0,0">
                                        <Run Text="{Binding TotalTracks}"/>
                                        <Run Text="tracks â€¢"/>
                                        <Run Text="{Binding SuccessfulCount}"/>
                                        <Run Text="done"/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding SourceType}" 
                                               Foreground="#666" FontSize="10" 
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- VERTICAL SPLITTER -->
        <GridSplitter Grid.Column="1" Width="2" 
                      Background="#404040" 
                      HorizontalAlignment="Stretch"/>

        <!-- DETAIL VIEW: Project Manifest for Selected Job -->
        <Grid Grid.Column="2" Background="#1E1E1E">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- No Project Selected Message -->
            <TextBlock Grid.Row="0" Grid.RowSpan="2"
                       Text="{Binding NoProjectSelectedMessage}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="14"
                       Foreground="#666"
                       IsHitTestVisible="False">
                <TextBlock.Visibility>
                    <Binding Path="SelectedProject" Converter="{StaticResource NullToVisibilityConverter}"/>
                </TextBlock.Visibility>
            </TextBlock>

            <!-- Project Header with Progress -->
            <Border Grid.Row="0" Background="#252526" BorderBrush="#404040" BorderThickness="0,0,0,1" Padding="16,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding SelectedProject.SourceTitle, StringFormat='ðŸ“ {0}'}"
                                   FontSize="16" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Foreground="#A0A0A0" FontSize="11" Margin="0,4,0,0">
                            <Run Text="{Binding SelectedProject.TotalTracks}"/>
                            <Run Text="tracks â€¢"/>
                            <Run Text="{Binding SelectedProject.SuccessfulCount}"/>
                            <Run Text="downloaded"/>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0,0,0">
                        <ProgressBar Value="{Binding SelectedProject.ProgressPercentage, Mode=OneWay}" 
                                     Maximum="100" Height="6" Width="150" VerticalAlignment="Center" 
                                     Background="#333" Foreground="#4CAF50"/>
                        <TextBlock Text="{Binding SelectedProject.ProgressPercentage, StringFormat={}{0:F0}%}" 
                                   HorizontalAlignment="Center" Margin="0,4,0,0" FontSize="11" Foreground="#A0A0A0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Project Tracks List -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="30"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- View Mode Selector -->
                <Border Grid.Row="0" Background="#252526" Padding="12">
                    <CheckBox Content="ðŸ–¼ï¸ Gallery Mode" 
                              IsChecked="{Binding IsGridView}" 
                              Foreground="White" 
                              VerticalAlignment="Center"
                              FontSize="12"/>
                </Border>

                <!-- Gallery View (Grid) -->
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding CurrentProjectTracks}"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.Visibility>
                        <Binding Path="IsGridView" Converter="{StaticResource BooleanToVisibilityConverter}"/>
                    </ListBox.Visibility>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2D2D2D" Margin="8" Padding="12" CornerRadius="8" Width="160">
                                <StackPanel>
                                    <!-- Album Art with Fallback -->
                                    <Border Background="#1E1E1E" CornerRadius="4" Height="140" Width="140">
                                        <Image Source="{Binding CoverArtUrl}" Stretch="UniformToFill"/>
                                    </Border>
                                    <TextBlock Text="{Binding Artist}" FontWeight="Bold" Margin="0,8,0,2" TextTrimming="CharacterEllipsis" Foreground="White"/>
                                    <TextBlock Text="{Binding Title}" FontSize="11" Foreground="#A0A0A0" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding State}" FontSize="10" Margin="0,4,0,0" Foreground="#A0A0A0"/>
                                    <ProgressBar Value="{Binding Progress, Mode=OneWay}" Maximum="100" Height="2" Margin="0,4,0,0" Background="#333" Foreground="#007ACC"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- List View (DataGrid) -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding CurrentProjectTracks}"
                          AutoGenerateColumns="False"
                          AllowDrop="True"
                          Background="Transparent"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#333"
                          RowBackground="#1E1E1E"
                          AlternatingRowBackground="#252526"
                          Foreground="White"
                          BorderThickness="0"
                          HeadersVisibility="Column"
                          IsReadOnly="False">
                    <DataGrid.Visibility>
                        <Binding Path="IsGridView" Converter="{StaticResource InverseBooleanToVisibilityConverter}"/>
                    </DataGrid.Visibility>
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#2D2D2D"/>
                            <Setter Property="Foreground" Value="#A0A0A0"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="BorderBrush" Value="#404040"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        </Style>
                        <Style TargetType="DataGridRow">
                            <Setter Property="AllowDrop" Value="True"/>
                            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="DataGridRow_PreviewMouseLeftButtonDown"/>
                            <EventSetter Event="Drop" Handler="DataGridRow_Drop"/>
                            <EventSetter Event="PreviewDragOver" Handler="OnPreviewDragOver"/>
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu>
                                        <MenuItem Header="â–¶ï¸ Resume" 
                                                  Command="{Binding DataContext.ResumeCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                  CommandParameter="{Binding}"/>
                                        <MenuItem Header="â¸ï¸ Pause" 
                                                  Command="{Binding DataContext.PauseCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                  CommandParameter="{Binding}"/>
                                        <MenuItem Header="ðŸ”„ Hard Retry" 
                                                  Command="{Binding DataContext.HardRetryCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                  CommandParameter="{Binding}"/>
                                        <Separator/>
                                        <MenuItem Header="âŒ Cancel" 
                                                  Command="{Binding DataContext.CancelCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                  CommandParameter="{Binding}"/>
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Artist" Binding="{Binding Artist}" Width="*"/>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                        <DataGridTextColumn Header="Album" Binding="{Binding Model.Album}" Width="*"/>
                        
                        <!-- Status & Progress -->
                        <DataGridTemplateColumn Header="Status" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding State}" VerticalAlignment="Center"/>
                                        <TextBlock Text=" ðŸ”„" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding State}" Value="Searching">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding State}" Value="Downloading">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Progress Bar -->
                        <DataGridTemplateColumn Header="Progress" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <ProgressBar Value="{Binding Progress, Mode=OneWay}" Maximum="100" Height="4" VerticalAlignment="Center" Background="#333" Foreground="#007ACC"/>
                                        <TextBlock Text="{Binding Progress, StringFormat={}{0:F0}%}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" Foreground="White"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTextColumn Header="Speed" Binding="{Binding CurrentSpeed}" Width="100"/>
                        
                        <!-- Actions -->
                        <DataGridTemplateColumn Header="Actions" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Retry" 
                                            Command="{Binding DataContext.HardRetryCommand, RelativeSource={RelativeSource AncestorType=Page}}" 
                                            CommandParameter="{Binding}"
                                            Background="#FF6C00" Foreground="White" BorderThickness="0" Padding="5,2"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Page>