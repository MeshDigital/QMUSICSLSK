<Page x:Class="SLSKDONET.Views.LibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:viewmodels="clr-namespace:SLSKDONET.ViewModels"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance Type=viewmodels:LibraryViewModel}"
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="LibraryPage">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <Grid Background="#121212">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDEBAR: Playlists -->
        <Border Grid.Column="0" Background="#1E1E1E" BorderBrush="#333" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Margin="20,20,20,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="My Library" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Command="{Binding CreatePlaylistCommand}" 
                                Background="#2A2A2A" BorderThickness="0" Foreground="#DDD" Cursor="Hand"
                                Padding="12,6" Margin="0,0,8,0" VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="âž•" Margin="0,0,6,0" FontSize="12"/>
                                <TextBlock Text="New Playlist" FontSize="12" FontWeight="SemiBold"/>
                            </StackPanel>
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Button Command="{Binding RefreshLibraryCommand}" 
                                Background="Transparent" BorderThickness="0" Foreground="#888" Cursor="Hand"
                                ToolTip="Refresh Library" Margin="0,0,0,0" Padding="6">
                             <TextBlock Text="ðŸ”„" FontSize="16"/>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- All Tracks Button -->
                <Button Grid.Row="1" Command="{Binding LoadAllTracksCommand}" 
                        Margin="12,0,12,10" Background="Transparent" BorderThickness="0" 
                        HorizontalContentAlignment="Left" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" Padding="10,8" CornerRadius="6" Background="Transparent">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“‚" Margin="0,0,12,0" FontSize="16" VerticalAlignment="Center"/>
                                    <TextBlock Text="All Tracks" FontSize="14" FontWeight="SemiBold" Foreground="#DDD" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#252525"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Empty State for Playlist List -->
                <TextBlock Grid.Row="2" Text="No playlists found." 
                           Foreground="#888" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding AllProjects.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Playlist List -->
                <ListBox Grid.Row="2" 
                         ItemsSource="{Binding AllProjects}" 
                         SelectedItem="{Binding SelectedProject}"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         Padding="10">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Border" 
                                                Padding="10,8" 
                                                CornerRadius="6" 
                                                Margin="0,2"
                                                Background="Transparent"
                                                SnapsToDevicePixels="True">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#333333"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#252525"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="#E0E0E0"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Icon placeholder -->
                                <Border Width="40" Height="40" CornerRadius="4" Background="#2A2A2A" Margin="0,0,12,0">
                                    <TextBlock Text="ðŸŽµ" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding SourceTitle}" FontWeight="SemiBold" FontSize="14" TextTrimming="CharacterEllipsis"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding SourceType}" FontSize="11" Foreground="#88FFFFFF" Margin="0,2,8,0"/>
                                        <TextBlock Text="{Binding TotalTracks, StringFormat='{}{0} tracks'}" FontSize="11" Foreground="#66FFFFFF" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- MAIN CONTENT AREA -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header & Toolbar -->
                <RowDefinition Height="*"/>    <!-- Track List -->
            </Grid.RowDefinitions>

            <!-- EMPTY STATE -->
            <Grid Grid.RowSpan="2" Panel.ZIndex="0" 
                  Visibility="{Binding SelectedProject, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.5">
                    <TextBlock Text="ðŸŽµ" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="Select a playlist to view tracks" FontSize="18" Foreground="#888"/>
                </StackPanel>
            </Grid>

            <!-- ACTIVE CONTENT -->
            <Grid Grid.RowSpan="2"
                   Visibility="{Binding SelectedProject, Converter={StaticResource NullToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/> <!-- HUD -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- HEADER & ACTIONS -->
                <Border Grid.Row="0" Padding="30,25,30,20" Background="#181818">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Title & Stats -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding SelectedProject.SourceTitle}" 
                                       FontSize="28" FontWeight="Bold" Foreground="White"
                                       TextTrimming="CharacterEllipsis"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Text="{Binding SelectedProject.SourceType}" Foreground="#AAA" Margin="0,0,15,0"/>
                                <TextBlock Text="â€¢" Foreground="#555" Margin="0,0,15,0"/>
                                <TextBlock Foreground="#AAA">
                                    <Run Text="{Binding SelectedProject.SuccessfulCount, Mode=OneWay}"/>
                                    <Run Text="/"/>
                                    <Run Text="{Binding SelectedProject.TotalTracks, Mode=OneWay}"/>
                                    <Run Text="downloaded"/>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>

                        <!-- SEARCH -->
                         <TextBox Grid.Column="1" Width="200" Margin="0,0,20,0" Padding="8,6" VerticalAlignment="Center"
                                  Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                  Background="#2A2A2A" Foreground="White" BorderThickness="0"
                                  Tag="Search Filter...">
                                  <TextBox.Resources>
                                      <Style TargetType="{x:Type Border}">
                                          <Setter Property="CornerRadius" Value="4"/>
                                      </Style>
                                  </TextBox.Resources>
                         </TextBox>

                        <!-- ACTIONS TOOLBAR (New Plugin System) -->
                        <!-- ACTIONS TOOLBAR (Management) -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            
                            <!-- Open Folder -->
                            <Button Command="{Binding OpenFolderCommand}" ToolTip="Open Folder in Explorer"
                                    Margin="5,0,0,0" Padding="12,6" Background="#262626" BorderThickness="0" Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“‚" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Folder" Foreground="#DDD" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- Remove Track (Context Sensitive) -->
                            <Button Command="{Binding RemoveTrackCommand}" ToolTip="Remove Selected Track from Playlist"
                                    Margin="8,0,0,0" Padding="12,6" Background="#262626" BorderThickness="0" Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ—‘ï¸" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Remove" Foreground="#DDD" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- Delete Playlist -->
                            <Button Command="{Binding DeleteProjectCommand}" ToolTip="Delete Entire Playlist"
                                    Margin="8,0,0,0" Padding="12,6" Background="#3A1010" BorderThickness="0" Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="âŒ" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Delete" Foreground="#FFCCCC" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                    </Grid>
                </Border>

                <!-- ACTIVE DOWNLOADS HUD -->
                <Expander Grid.Row="1" Header="Active Downloads &amp; Concurrency" Foreground="#DDD" 
                          Background="#1A1A1A" BorderBrush="#333" BorderThickness="0,0,0,1" Padding="10" IsExpanded="True">
                    <Grid Height="120">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="220"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- List -->
                        <ListView Grid.Column="0" ItemsSource="{Binding ActiveDownloadsView}" Background="Transparent" BorderThickness="0" Foreground="White">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,2" Width="450">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="80"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" Foreground="White" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Artist}" Foreground="#AAA" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                        <ProgressBar Grid.Column="1" Value="{Binding Progress}" Maximum="100" Height="4" Margin="10,0" VerticalAlignment="Center" Foreground="#007ACC" Background="#333"/>
                                        <TextBlock Grid.Column="2" Text="{Binding CurrentSpeed}" Foreground="#888" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="11"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- Controls -->
                        <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Top">
                            <TextBlock Text="Max Concurrent Downloads" Foreground="#AAA" FontSize="12" Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal">
                                <Slider Value="{Binding MaxDownloads}" Minimum="1" Maximum="10" Width="150" 
                                        AutoToolTipPlacement="TopLeft" SmallChange="1" IsSnapToTickEnabled="True" TickPlacement="BottomRight"/>
                                <TextBlock Text="{Binding MaxDownloads}" Foreground="White" Margin="10,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
                            </StackPanel>
                            <TextBlock Text="Limit active downloads to share bandwidth." Foreground="#666" FontSize="10" Margin="0,5,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </Expander>

                <!-- TRACK LIST DATAGRID -->
                <DataGrid Grid.Row="2" 
                          ItemsSource="{Binding CurrentProjectTracks}"
                          AutoGenerateColumns="False"
                          Background="Transparent"
                          BorderThickness="0"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#222"
                          RowBackground="Transparent"
                          Foreground="#DDD"
                          RowHeight="40"
                          HeadersVisibility="Column"
                          Padding="10"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="False">
                    
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#888"/>
                            <Setter Property="Padding" Value="10,8"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="#333"/>
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                            <Setter Property="Padding" Value="10,0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#2AFFFFFF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <!-- Styles for Editing -->
                        <Style x:Key="TitleColumnStyle" TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="Medium"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                        <Style x:Key="EditingTextStyle" TargetType="TextBox">
                            <Setter Property="Background" Value="#333"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                        
                        <Style TargetType="DataGridRow">
                            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="DataGridRow_PreviewMouseLeftButtonDown"/>
                            <EventSetter Event="Drop" Handler="DataGridRow_Drop"/>
                            <EventSetter Event="PreviewDragOver" Handler="OnPreviewDragOver"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1AFFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <!-- # -->
                        <DataGridTextColumn Header="#" Binding="{Binding SortOrder}" Width="40" Foreground="#666" IsReadOnly="True"/>
                        
                        <!-- Title (Editable) -->
                        <DataGridTextColumn Header="Title" Binding="{Binding Title, UpdateSourceTrigger=LostFocus}" Width="2*" ElementStyle="{StaticResource TitleColumnStyle}" EditingElementStyle="{StaticResource EditingTextStyle}"/>

                        <!-- Artist (Editable) -->
                        <DataGridTextColumn Header="Artist" Binding="{Binding Artist, UpdateSourceTrigger=LostFocus}" Width="1.5*" EditingElementStyle="{StaticResource EditingTextStyle}"/>

                        <!-- Album (Editable) -->
                        <DataGridTextColumn Header="Album" Binding="{Binding Model.Album, UpdateSourceTrigger=LostFocus}" Width="1.5*" EditingElementStyle="{StaticResource EditingTextStyle}"/>

                        <!-- Status -->
                        <DataGridTemplateColumn Header="Status" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" Padding="6,2" HorizontalAlignment="Left" Background="#22FFFFFF">
                                        <TextBlock Text="{Binding State}" FontSize="11" Foreground="#CCC"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Progress -->
                         <DataGridTemplateColumn Header="Progress" Width="100">
                             <DataGridTemplateColumn.CellTemplate>
                                 <DataTemplate>
                                     <Grid Height="4">
                                         <ProgressBar Value="{Binding Progress, Mode=OneWay}" Maximum="100" Height="4" BorderThickness="0" Background="#333" Foreground="#4CAF50"/>
                                     </Grid>
                                 </DataTemplate>
                             </DataGridTemplateColumn.CellTemplate>
                         </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
                
            </Grid>
        </Grid>
    </Grid>
</Page>