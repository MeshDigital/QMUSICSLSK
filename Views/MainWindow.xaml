<Window x:Class="SLSKDONET.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SLSKDONET.Views"
    xmlns:converters="clr-namespace:SLSKDONET.Converters"
    Title="Soulseek Downloader" 
    Height="800" 
    Width="1200"
    WindowStartupLocation="CenterScreen"
    Background="#1E1E1E">
    
    <Grid x:Name="MainGrid" Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Global Progress Bar (Top of Window) -->
        <Border Grid.Row="0" Height="3" Background="#1E1E1E">
            <ProgressBar Value="{Binding DownloadProgressPercentage, Mode=OneWay, FallbackValue=0}" 
                         Maximum="100" 
                         Foreground="#4CAF50" 
                         Background="Transparent"
                         BorderThickness="0"
                         Height="3"/>
        </Border>

        <!-- Main Content Area with Simple Navigation Menu -->
        <Grid x:Name="RootContent" Grid.Row="1" Background="#1E1E1E">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Navigation Panel -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#404040" BorderThickness="0,0,1,0">
                <StackPanel Margin="0,20,0,0">
                    <Button Content="ðŸ” Search" Command="{Binding NavigateSearchCommand}" 
                            Style="{StaticResource NavButtonStyle}" Margin="10,5"/>
                    <Button Content="ðŸ“š Library" Command="{Binding NavigateLibraryCommand}" 
                            Style="{StaticResource NavButtonStyle}" Margin="10,5"/>
                    <Button Content="â¬‡ï¸ Downloads" Command="{Binding NavigateDownloadsCommand}" 
                            Style="{StaticResource NavButtonStyle}" Margin="10,5"/>
                    <Button Content="âš™ï¸ Settings" Command="{Binding NavigateSettingsCommand}" 
                            Style="{StaticResource NavButtonStyle}" Margin="10,5"/>
                </StackPanel>
            </Border>
            
            <!-- Frame for page content -->
            <Frame x:Name="RootFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Background="Transparent"/>
        </Grid>

        <!-- Status Bar with Connection Indicator -->
        <Border Grid.Row="2" Background="#2D2D2D" BorderBrush="#404040" BorderThickness="0,1,0,0" Padding="16,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Connection Status Indicator (Left) -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="10" Height="10" Margin="0,0,8,0"
                             Fill="{Binding IsConnected, Converter={StaticResource ConnectionStatusColorConverter}}"/>
                    <TextBlock Text="{Binding ConnectionStatus, Converter={StaticResource ConnectionStatusTextConverter}}" 
                               Foreground="#A0A0A0" FontSize="11" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,12,0"/>
                    
                    <!-- Sign In button (only visible when disconnected) -->
                    <Button Content="ðŸ”‘ Sign In" 
                            Command="{Binding ShowLoginCommand}"
                            Background="#0E639C"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,4"
                            FontSize="11"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            VerticalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="3"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#1177BB"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- Status Message (Center) -->
                <TextBlock Grid.Column="1" 
                           Text="{Binding StatusText, FallbackValue='Ready'}" 
                           Foreground="#A0A0A0"
                           FontSize="12"
                           Margin="20,0,0,0"/>

                <!-- Download Progress (Right) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding TodoCount, StringFormat='ðŸ“¥ {0} in progress'}" 
                               Foreground="#A0A0A0" FontSize="11" Margin="0,0,12,0"/>
                    <TextBlock Text="{Binding SuccessfulCount, StringFormat='âœ“ {0} completed'}" 
                               Foreground="#A0A0A0" FontSize="11" Margin="0,0,12,0"/>
                    <TextBlock Text="{Binding FailedCount, StringFormat='âœ— {0} failed'}" 
                               Foreground="#A0A0A0" FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Login Overlay - ALWAYS visible on top when not connected -->
        <Grid x:Name="LoginOverlay" 
              Grid.Row="0" 
              Grid.RowSpan="2"
              Panel.ZIndex="1000"
              Background="#DD000000">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsLoginOverlayVisible, FallbackValue=True}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>

            <!-- Centered login card -->
            <Border x:Name="LoginCard" 
                    Background="#252526" 
                    CornerRadius="8" 
                    Padding="32"
                    Width="420"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    BorderBrush="#404040"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Sign in to Soulseek" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,0,0,24" 
                               HorizontalAlignment="Center"/>

                    <Label Content="Username" 
                           Foreground="#A0A0A0" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,6"/>
                    <TextBox Text="{Binding Username, Mode=TwoWay}" 
                             Background="#2D2D2D"
                             Foreground="White"
                             BorderBrush="#404040"
                             Padding="12,8"
                             FontSize="14"
                             Margin="0,0,0,16"/>

                    <Label Content="Password" 
                           Foreground="#A0A0A0" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,6"/>
                    <PasswordBox x:Name="OverlayPasswordBox" 
                                 Background="#2D2D2D"
                                 Foreground="White"
                                 BorderBrush="#404040"
                                 Padding="12,8"
                                 FontSize="14"
                                 Margin="0,0,0,16"/>

                    <CheckBox Content="Remember Password" 
                              IsChecked="{Binding RememberPassword, Mode=TwoWay}" 
                              Foreground="White"
                              Margin="0,0,0,20"/>

                     <Button x:Name="SignInButton"
                            Content="Sign In" 
                            Click="SignInButton_Click"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Height="44"
                            FontSize="14"
                            FontWeight="SemiBold"
                            IsDefault="True"/>
                    
                    <Button Content="Maybe Later" 
                            Command="{Binding DismissLoginCommand}"
                            Background="Transparent" 
                            Foreground="#A0A0A0" 
                            FontSize="12"
                            BorderThickness="0" 
                            Padding="0,12"
                            Margin="0,8,0,0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <TextBlock Text="{TemplateBinding Content}" 
                                          Foreground="#A0A0A0"
                                          HorizontalAlignment="Center"
                                          TextDecorations="Underline">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
