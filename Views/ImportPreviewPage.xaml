<Page x:Class="SLSKDONET.Views.ImportPreviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SLSKDONET.Views"
      xmlns:viewmodels="clr-namespace:SLSKDONET.ViewModels"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance Type=viewmodels:ImportPreviewViewModel, IsDesignTimeCreatable=True}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ImportPreviewPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="{Binding SourceTitle}" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="{Binding StatusMessage}" Foreground="Gray"/>
        </StackPanel>

        <!-- Toolbar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,0">
            <Button Content="Select All" Command="{Binding SelectAllCommand}" Margin="0,0,5,0"/>
            <Button Content="Deselect All" Command="{Binding DeselectAllCommand}" Margin="0,0,20,0"/>
            
            <!-- This is a placeholder for a more advanced filter UI -->
            <!-- <CheckBox Content="Show only missing tracks" IsChecked="{Binding ShowOnlyMissing, Mode=TwoWay}" VerticalAlignment="Center"/> -->
        </StackPanel>

        <!-- Track List / Grid -->
        <ListView Grid.Row="2" Margin="10" ItemsSource="{Binding AlbumGroups}" SelectionMode="Extended">
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock FontWeight="Bold" FontSize="14" Text="{Binding Name}" Margin="0,10,0,5"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Selected" Width="60">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" 
                                          Checked="OnTrackSelectionChanged" Unchecked="OnTrackSelectionChanged"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Artist}" Header="Artist" Width="200"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Title}" Header="Title" Width="250"/>
                    <GridViewColumn Header="In Library" Width="80">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding IsInLibrary}" 
                                           HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Footer Actions -->
        <Border Grid.Row="3" Background="#2a2a2a" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="{Binding SelectedCount, StringFormat={}{0} tracks selected}" 
                           VerticalAlignment="Center" Margin="0,0,20,0" Foreground="LightGray"/>
                <Button Content="Cancel" Command="{Binding CancelCommand}" Width="100" Margin="0,0,10,0" IsCancel="True"/>
                <Button Content="Add to Library" Command="{Binding AddToLibraryCommand}" Width="120" IsDefault="True"
                        IsEnabled="{Binding CanAddToLibrary}"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>