<Page x:Class="SLSKDONET.Views.ImportPreviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:viewmodels="clr-namespace:SLSKDONET.ViewModels"
      xmlns:converters="clr-namespace:SLSKDONET.Converters"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance Type=viewmodels:ImportPreviewViewModel}"
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Import Preview">

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252526" BorderBrush="#404040" BorderThickness="0,0,0,1" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="4">
                    <TextBlock FontSize="18" FontWeight="SemiBold" Foreground="#FFFFFF">
                        <Run Text="ðŸ“ "/>
                        <Run Text="{Binding SourceTitle}"/>
                    </TextBlock>
                    <TextBlock FontSize="12" Foreground="#A0A0A0" Margin="0,4,0,0">
                        <Run Text="Source: "/>
                        <Run Text="{Binding SourceType}"/>
                    </TextBlock>
                    <TextBlock FontSize="13" Foreground="#4CAF50" Margin="0,4,0,0" FontWeight="Medium">
                        <Run Text="Loaded: "/>
                        <Run Text="{Binding TrackCount, Mode=OneWay}"/>
                        <Run Text=" tracks"/>
                    </TextBlock>
                </StackPanel>

                <!-- Selection Summary -->
                <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="16,0,0,0">
                    <TextBlock FontSize="13" Foreground="#2196F3" FontWeight="Medium">
                        <Run Text="Selected: "/>
                        <Run Text="{Binding SelectedCount, Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock Text="{Binding StatusMessage}" FontSize="11" Foreground="#A0A0A0" Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Track Grid -->
        <Border Grid.Row="1" Background="#1E1E1E">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding AlbumGroups}" Margin="0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Album Header -->
                                <Border Grid.Row="0" Background="#2A2A2B" Margin="16,0,16,8" CornerRadius="4">
                                    <Grid Margin="16,12,16,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Margin="0">
                                            <TextBlock Text="{Binding Album}" FontSize="14" FontWeight="SemiBold" Foreground="#FFFFFF"/>
                                            <TextBlock FontSize="11" Foreground="#A0A0A0" Margin="0,4,0,0">
                                                <Run Text="{Binding Tracks.Count, Mode=OneWay}"/>
                                                <Run Text=" tracks"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Tracks Grid -->
                                <ItemsControl Grid.Row="1" ItemsSource="{Binding Tracks}" Margin="0">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" Margin="16,0,16,0"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Width="220" Margin="0,0,8,8" Background="{Binding IsSelected, Converter={StaticResource IsSelectedToBackgroundConverter}}"
                                                    BorderBrush="{Binding IsSelected, Converter={StaticResource IsSelectedToBorderConverter}}"
                                                    BorderThickness="2" CornerRadius="6" MouseDown="TrackCard_MouseDown" Cursor="Hand">
                                                <Grid Margin="12,12,12,12">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <CheckBox Grid.Row="0" IsChecked="{Binding IsSelected, Mode=TwoWay}" Foreground="#FFFFFF" Margin="0,0,0,8"/>
                                                    <TextBlock Grid.Row="1" Text="{Binding Title}" FontSize="13" FontWeight="SemiBold" Foreground="#FFFFFF" TextTrimming="CharacterEllipsis" ToolTip="{Binding Title}"/>
                                                    <TextBlock Grid.Row="2" Text="{Binding Artist}" FontSize="11" Foreground="#B0B0B0" TextTrimming="CharacterEllipsis" Margin="0,4,0,0" ToolTip="{Binding Artist}"/>
                                                    <TextBlock Grid.Row="3" Text="{Binding Album}" FontSize="10" Foreground="#808080" TextTrimming="CharacterEllipsis" Margin="0,2,0,0" ToolTip="{Binding Album}"/>
                                                    <TextBlock Grid.Row="4" FontSize="10" Foreground="#606060" Margin="0,6,0,0">
                                                        <Run Text="Length: "/>
                                                        <Run Text="{Binding Length, StringFormat={}{0:hh\\:mm\\:ss}, FallbackValue='Unknown'}"/>
                                                    </TextBlock>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Footer with Action Buttons -->
        <Border Grid.Row="2" Background="#252526" BorderBrush="#404040" BorderThickness="0,1,0,0" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Selection Buttons (Left) -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0">
                    <Button Content="â˜‘ï¸ Select All" Command="{Binding SelectAllCommand}" Style="{StaticResource ModernButtonStyle}" Padding="12,8" FontSize="12" Foreground="#FFFFFF" Margin="0,0,8,0"/>
                    <Button Content="â˜ Deselect All" Command="{Binding DeselectAllCommand}" Style="{StaticResource ModernButtonStyle}" Padding="12,8" FontSize="12" Foreground="#FFFFFF"/>
                </StackPanel>

                <!-- Action Buttons (Right) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0">
                    <Button Content="Cancel" Command="{Binding CancelCommand}" Style="{StaticResource ModernButtonStyle}" Padding="16,8" FontSize="12" Foreground="#B0B0B0" Margin="0,0,8,0" IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"/>
                    <Button Content="âž• Add to Library" Command="{Binding AddToLibraryCommand}" Style="{StaticResource PrimaryButtonStyle}" Padding="16,8" FontSize="12" FontWeight="SemiBold" IsEnabled="{Binding CanAddToLibrary}">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.4" Color="#4CAF50"/>
                        </Button.Effect>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Indicator -->
        <Grid Grid.Row="1" Background="#00000066" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Adding to library..." Foreground="#FFFFFF" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
