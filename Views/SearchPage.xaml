<Page x:Class="SLSKDONET.Views.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:converters="clr-namespace:SLSKDONET.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SearchPage">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search Input -->
        <Border Grid.Row="0" Background="{StaticResource SecondaryBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Main Search Row -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Input with integrated buttons -->
                    <Border Grid.Column="0" Background="{StaticResource BackgroundBrush}" 
                            CornerRadius="8" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3" Color="#000000"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Main TextBox -->
                            <ui:TextBox Name="SearchBox" Grid.Column="0"
                                     Text="{Binding SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     PlaceholderText="ðŸ” Search: artist/title | Spotify URL | CSV file path | Paste anything"
                                     Icon="{ui:SymbolIcon Search24}"
                                     ClearButtonEnabled="True"
                                     Height="48"
                                     FontSize="16"
                                     Padding="14,12"
                                     VerticalContentAlignment="Center"
                                     VerticalAlignment="Center"
                                     IsEnabled="{Binding IsSearching, Converter={StaticResource InverseBooleanConverter}}">
                                <ui:TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                                </ui:TextBox.InputBindings>
                            </ui:TextBox>

                            <!-- Quick Action Buttons (in textbox) -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,6,0">
                                <CheckBox Content="ðŸ“ Albums" IsChecked="{Binding IsAlbumSearch}"
                                          Height="36" VerticalContentAlignment="Center" Margin="0,0,10,0"
                                          Foreground="{StaticResource TextBrush}"
                                          FontSize="13" FontWeight="Medium"
                                          ToolTip="Group results by Album (User + Directory)"/>
                                <Button Content="ðŸ“‹" ToolTip="Browse for CSV file" Click="ImportCsvButton_Click"
                                        Style="{StaticResource ModernButtonStyle}" 
                                        Width="36" Height="36" Padding="0" FontSize="16" Margin="4,0"
                                        Background="{StaticResource SurfaceBrush}">
                                    <Button.Effect>
                                        <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.2"/>
                                    </Button.Effect>
                                </Button>
                                <Button Content="ðŸ”§" ToolTip="Search Filters" Command="{Binding ToggleFiltersPanelCommand}"
                                        Style="{StaticResource ModernButtonStyle}"
                                        Width="36" Height="36" Padding="0" FontSize="16" Margin="4,0"
                                        Background="{StaticResource SurfaceBrush}">
                                    <Button.Effect>
                                        <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.2"/>
                                    </Button.Effect>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Search Button -->
                    <Button Grid.Column="1" Content="ðŸ” Search" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding SearchCommand}"
                            Height="48" Padding="28,0" Margin="12,0,0,0" FontSize="15" FontWeight="SemiBold"
                            IsEnabled="{Binding IsSearching, Converter={StaticResource InverseBooleanConverter}}">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.4" Color="{StaticResource AccentColor}"/>
                        </Button.Effect>
                    </Button>
                </Grid>

                <!-- Search Status Row (only show when searching) -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0"
                            Visibility="{Binding IsSearching, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}">
                    <TextBlock Text="â³ Searching..." 
                               Foreground="{StaticResource AccentBrush}"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"
                               FontSize="12"/>
                    <ProgressBar IsIndeterminate="True" 
                                 Width="120" 
                                 Height="3"
                                 VerticalAlignment="Center"/>
                    <Button Content="Cancel" Margin="12,0,0,0"
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding CancelSearchCommand}"
                            Height="28" Padding="12,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Inline Filter Panel -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" Padding="16"
                Visibility="{Binding IsFiltersPanelVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <StackPanel>
                <Label Content="Active Filters" Style="{StaticResource ModernLabelStyle}" Margin="0,0,0,12"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Content="Min Bitrate:" Style="{StaticResource ModernLabelStyle}" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" Text="{Binding MinBitrate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Margin="8,0,16,0" VerticalAlignment="Center"/>

                    <Label Grid.Column="2" Content="Max Bitrate:" Style="{StaticResource ModernLabelStyle}" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="3" Text="{Binding MaxBitrate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Margin="8,0,16,0" VerticalAlignment="Center"/>

                    <Label Grid.Column="4" Content="Formats:" Style="{StaticResource ModernLabelStyle}" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="5" Text="{Binding PreferredFormats, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Margin="8,0,0,0" VerticalAlignment="Center"/>
                </Grid>
                <TextBlock Text="{Binding ActiveFiltersSummary}" Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="{StaticResource FontSizeSmall}" Margin="0,12,0,0"/>
            </StackPanel>
        </Border>

        <!-- Orchestration Progress Panel -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" Padding="16"
                Visibility="{Binding OrchestratedQueries.Count, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
            <StackPanel>
                <Label Content="ðŸŽµ Orchestrating Batch Import" Style="{StaticResource ModernLabelStyle}" Margin="0,0,0,12" FontWeight="Bold"/>
                <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto" Margin="0,0,0,12">
                    <ItemsControl ItemsSource="{Binding OrchestratedQueries}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,8" Height="32">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="120"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Status Emoji -->
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding State, Converter={StaticResource StateToEmojiConverter}}"
                                               FontSize="20"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Foreground="{StaticResource AccentBrush}"/>

                                    <!-- Query Name -->
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Query}"
                                               FontSize="12"
                                               VerticalAlignment="Center"
                                               Margin="12,0,0,0"
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               TextTrimming="CharacterEllipsis"/>

                                    <!-- Result Count (when searching/ranking) -->
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding TotalResults, StringFormat='Results: {0}'}"
                                               FontSize="11"
                                               VerticalAlignment="Center"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"
                                               Margin="8,0,0,0"/>

                                    <!-- Matched Track (when complete) -->
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding MatchedTrack}"
                                               FontSize="11"
                                               VerticalAlignment="Center"
                                               Foreground="{StaticResource AccentBrush}"
                                               Visibility="{Binding IsComplete, Converter={StaticResource BooleanToVisibilityConverter}}"
                                               Margin="8,0,0,0"
                                               TextTrimming="CharacterEllipsis"/>

                                    <!-- Match Score -->
                                    <ProgressBar Grid.Column="3" 
                                                 Value="{Binding MatchScore}"
                                                 Maximum="100"
                                                 Height="6"
                                                 VerticalAlignment="Center"
                                                 Margin="8,0,0,0"
                                                 Background="{StaticResource BackgroundBrush}"
                                                 Visibility="{Binding IsComplete, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                <TextBlock Text="{Binding StatusText}" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="{StaticResource FontSizeSmall}"
                           FontStyle="Italic"
                           FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <!-- Results / Import Preview Region -->
        <Grid Grid.Row="3">
            <!-- Import Preview embedded in Search page so search bar/nav stay visible -->
            <Grid x:Name="ImportPreviewPanel"
                  Visibility="{Binding IsImportPreviewVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid DataContext="{Binding ImportPreviewViewModel}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Preview Header -->
                    <Border Grid.Row="0" Background="{StaticResource SecondaryBackgroundBrush}" 
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="4">
                                <TextBlock FontSize="17" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}">
                                    <Run Text="ðŸ“ "/>
                                    <Run Text="{Binding SourceTitle}"/>
                                </TextBlock>
                                <TextBlock FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0">
                                    <Run Text="Source: "/>
                                    <Run Text="{Binding SourceType, Mode=OneWay}"/>
                                </TextBlock>
                                <TextBlock FontSize="12" Foreground="#7CCB5B" Margin="0,4,0,0" FontWeight="Medium">
                                    <Run Text="Loaded: "/>
                                    <Run Text="{Binding TrackCount, Mode=OneWay}"/>
                                    <Run Text=" tracks"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="16,0,0,0">
                                <TextBlock FontSize="13" Foreground="{StaticResource AccentBrush}" FontWeight="Medium">
                                    <Run Text="Selected: "/>
                                    <Run Text="{Binding SelectedCount, Mode=OneWay}"/>
                                </TextBlock>
                                <TextBlock Text="{Binding StatusMessage}" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Preview Body -->
                    <Border Grid.Row="1" Background="{StaticResource BackgroundBrush}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <ItemsControl ItemsSource="{Binding AlbumGroups}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,16">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" Margin="12,0,12,8" CornerRadius="4" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                                                <Grid Margin="12,10,12,10">
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Album}" FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}"/>
                                                        <TextBlock FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0">
                                                            <Run Text="{Binding Tracks.Count, Mode=OneWay}"/>
                                                            <Run Text=" tracks"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>

                                            <ItemsControl Grid.Row="1" ItemsSource="{Binding Tracks}" Margin="0">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel Orientation="Horizontal" Margin="12,0,12,0"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Width="220" Margin="0,0,8,8" Background="{Binding IsSelected, Converter={StaticResource IsSelectedToBackgroundConverter}}"
                                                                BorderBrush="{Binding IsSelected, Converter={StaticResource IsSelectedToBorderConverter}}"
                                                                BorderThickness="1.5" CornerRadius="6" MouseDown="PreviewTrackCard_MouseDown" Cursor="Hand">
                                                            <Grid Margin="10">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>
                                                                <CheckBox Grid.Row="0" IsChecked="{Binding IsSelected, Mode=TwoWay}" Foreground="{StaticResource TextBrush}" Margin="0,0,0,6" Checked="PreviewTrackSelectionChanged" Unchecked="PreviewTrackSelectionChanged"/>
                                                                <TextBlock Grid.Row="1" Text="{Binding Title}" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" TextTrimming="CharacterEllipsis" ToolTip="{Binding Title}"/>
                                                                <TextBlock Grid.Row="2" Text="{Binding Artist}" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" TextTrimming="CharacterEllipsis" Margin="0,4,0,0" ToolTip="{Binding Artist}"/>
                                                                <TextBlock Grid.Row="3" Text="{Binding Album}" FontSize="10" Foreground="#7A7A7A" TextTrimming="CharacterEllipsis" Margin="0,2,0,0" ToolTip="{Binding Album}"/>
                                                                <TextBlock Grid.Row="4" FontSize="10" Foreground="#5A5A5A" Margin="0,6,0,0">
                                                                    <Run Text="Length: "/>
                                                                    <Run Text="{Binding Length, StringFormat={}{0:hh\\:mm\\:ss}, FallbackValue='Unknown'}"/>
                                                                </TextBlock>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>

                    <!-- Preview Footer -->
                    <Border Grid.Row="2" Background="{StaticResource SecondaryBackgroundBrush}"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" Padding="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="â˜‘ï¸ Select All" Command="{Binding SelectAllCommand}" Style="{StaticResource ModernButtonStyle}" Padding="10,7" FontSize="12" Foreground="{StaticResource TextBrush}" Margin="0,0,8,0"/>
                                <Button Content="â˜ Deselect All" Command="{Binding DeselectAllCommand}" Style="{StaticResource ModernButtonStyle}" Padding="10,7" FontSize="12" Foreground="{StaticResource TextBrush}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="Cancel" Command="{Binding CancelCommand}" Style="{StaticResource ModernButtonStyle}" Padding="14,8" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" 
                                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}" Margin="0,0,8,0"/>
                                <Button Content="âž• Add to Library" Command="{Binding AddToLibraryCommand}" Style="{StaticResource PrimaryButtonStyle}" Padding="14,8" FontSize="12" FontWeight="SemiBold" IsEnabled="{Binding CanAddToLibrary}">
                                    <Button.Effect>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.35" Color="#4CAF50"/>
                                    </Button.Effect>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Loading Overlay -->
                    <Grid Grid.Row="1" Background="#00000055" Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Adding to library..." Foreground="{StaticResource TextBrush}" FontSize="14" HorizontalAlignment="Center"/>
                            <ProgressBar IsIndeterminate="True" Width="160" Height="4" Margin="0,8,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Default Results Panel -->
            <Grid x:Name="ResultsPanel"
                  Visibility="{Binding IsImportPreviewVisible, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                <!-- Results DataGrid -->
                <DataGrid Name="ResultsGrid" 
                          ItemsSource="{Binding SearchResults}"
                          Style="{StaticResource ModernDataGridStyle}" 
                          ColumnHeaderStyle="{StaticResource ModernColumnHeaderStyle}"
                          CellStyle="{StaticResource ModernCellStyle}"
                          RowStyle="{StaticResource ModernRowStyle}"
                          Margin="0"
                          IsReadOnly="True"
                          Visibility="{Binding IsAlbumSearch, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                          SelectionChanged="ResultsGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Binding="{Binding OriginalIndex, StringFormat={}{0}}" Width="40"/>
                        <DataGridTextColumn Header="Rank" Binding="{Binding CurrentRank, StringFormat={}{0:F1}}" Width="50"/>
                        <DataGridTextColumn Header="Artist" Binding="{Binding Artist}" Width="150"/>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" MinWidth="200"/>
                        <DataGridTextColumn Header="Album" Binding="{Binding Album}" Width="150"/>
                        <DataGridTextColumn Header="Bitrate" Binding="{Binding Bitrate, StringFormat={}{0} kbps}" Width="80"/>
                        <DataGridTextColumn Header="User" Binding="{Binding Username}" Width="120"/>
                        <DataGridTextColumn Header="Size" Binding="{Binding Size, StringFormat={}{0:N0} KB}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Album Results DataGrid -->
                <DataGrid Name="AlbumResultsGrid" 
                          ItemsSource="{Binding AlbumResults}"
                          Style="{StaticResource ModernDataGridStyle}" 
                          ColumnHeaderStyle="{StaticResource ModernColumnHeaderStyle}"
                          CellStyle="{StaticResource ModernCellStyle}"
                          RowStyle="{StaticResource ModernRowStyle}"
                          Margin="0"
                          IsReadOnly="True"
                          Visibility="{Binding IsAlbumSearch, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Action" Width="50">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="â¬‡ï¸" Command="{Binding DownloadAlbumCommand}"
                                            ToolTip="Download Album"
                                            Width="30" Height="24" Padding="0"
                                            Background="Transparent" BorderThickness="0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Album" Binding="{Binding AlbumTitle}" Width="*" MinWidth="200" FontWeight="SemiBold"/>
                        <DataGridTextColumn Header="Artist" Binding="{Binding Artist}" Width="150"/>
                        <DataGridTextColumn Header="Tracks" Binding="{Binding TrackCount}" Width="60"/>
                        <DataGridTextColumn Header="Quality" Binding="{Binding QualitySummary}" Width="120"/>
                        <DataGridTextColumn Header="User" Binding="{Binding Username}" Width="120"/>
                        <DataGridTextColumn Header="Size" Binding="{Binding TotalSizeMb, StringFormat={}{0:F1} MB}" Width="80"/>
                        <DataGridTemplateColumn Header="Slot" Width="40">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="ðŸš€" ToolTip="Free Upload Slot Available" 
                                               Visibility="{Binding HasFreeSlot, Converter={StaticResource BooleanToVisibilityConverter}}"
                                               HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>

        <!-- Action Buttons -->
        <Border Grid.Row="4" Background="{StaticResource SecondaryBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0" Padding="20,12"
                Visibility="{Binding IsImportPreviewVisible, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="â¬‡ï¸ Add Selected to Downloads"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding AddToDownloadsCommand}"
                            CommandParameter="{Binding ElementName=ResultsGrid, Path=SelectedItems}"
                            Height="42" Padding="20,10" FontSize="14" FontWeight="SemiBold">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.3" Color="{StaticResource AccentColor}"/>
                        </Button.Effect>
                    </Button>
                    <Border Background="{StaticResource SurfaceBrush}" 
                            CornerRadius="20" Padding="12,6" Margin="16,0,0,0"
                            VerticalAlignment="Center"
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <TextBlock Foreground="{StaticResource AccentBrush}" 
                                   FontSize="13" FontWeight="SemiBold">
                            <Run Text="{Binding SelectedTrackCount, Mode=OneWay}"/>
                            <Run Text=" selected" Foreground="{StaticResource TextSecondaryBrush}" FontWeight="Normal"/>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>