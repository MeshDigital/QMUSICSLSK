<Window x:Class="SLSKDONET.Views.StartupSplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SLSKDONET"
        Height="400"
        Width="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True">
    
    <Border Background="#1E1E1E" 
            CornerRadius="12"
            BorderBrush="#0078D4"
            BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                            Direction="270" 
                            ShadowDepth="10" 
                            BlurRadius="20" 
                            Opacity="0.5"/>
        </Border.Effect>
        
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- App Icon/Logo -->
            <Viewbox Grid.Row="0" Height="80" Margin="0,0,0,20">
                <TextBlock Text="ðŸŽµ" FontSize="64"/>
            </Viewbox>

            <!-- App Title -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="SLSKDONET"
                          FontSize="36"
                          FontWeight="Bold"
                          Foreground="#0078D4"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10"/>
                
                <TextBlock Text="Soulseek Music Downloader"
                          FontSize="14"
                          Foreground="#CCCCCC"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30"/>
            </StackPanel>

            <!-- Loading Message -->
            <TextBlock x:Name="LoadingText"
                      Grid.Row="2"
                      Text="Initializing..."
                      FontSize="14"
                      Foreground="#AAAAAA"
                      FontStyle="Italic"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,15"
                      TextWrapping="Wrap"
                      TextAlignment="Center"/>

            <!-- Progress Bar -->
            <Border Grid.Row="3" 
                    Background="#2D2D2D"
                    CornerRadius="10"
                    Height="20"
                    Margin="0,0,0,10">
                <ProgressBar x:Name="ProgressBar"
                            Value="0"
                            Minimum="0"
                            Maximum="100"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#0078D4"/>
            </Border>

            <!-- Percentage Text -->
            <TextBlock x:Name="PercentageText"
                      Grid.Row="4"
                      Text="0%"
                      FontSize="12"
                      Foreground="#888888"
                      HorizontalAlignment="Center"
                      Margin="0,5,0,0"/>
        </Grid>
    </Border>
</Window>
