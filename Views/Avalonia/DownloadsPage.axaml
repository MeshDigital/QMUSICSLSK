<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SLSKDONET.ViewModels.Downloads"
             xmlns:m="clr-namespace:SLSKDONET.Models"
             xmlns:selectors="clr-namespace:SLSKDONET.Views.Avalonia.Selectors"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="SLSKDONET.Views.Avalonia.DownloadsPage"
             x:DataType="vm:DownloadCenterViewModel"
             Background="#1E1E1E" Foreground="White">
    
    <UserControl.Styles>
        <!-- Pulsing Animation for Silver/Speculative Badge -->
        <Style Selector="Border.pulsing">
            <Style.Animations>
                <Animation Duration="0:0:1.5" IterationCount="Infinite">
                    <KeyFrame KeyTime="0:0:0">
                        <Setter Property="Opacity" Value="0.6"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="0.95"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="0.95"/>
                    </KeyFrame>
                    <KeyFrame KeyTime="0:0:0.75">
                        <Setter Property="Opacity" Value="1.0"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="1.1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.1"/>
                    </KeyFrame>
                    <KeyFrame KeyTime="0:0:1.5">
                        <Setter Property="Opacity" Value="0.6"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="0.95"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="0.95"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Express Lane Item Style (Golden Border) -->
        <Style Selector="Border.express">
             <Setter Property="BorderBrush" Value="#FFD700"/>
             <Setter Property="BorderThickness" Value="1"/>
             <Setter Property="Background" Value="#2A2A22"/>
        </Style>
    </UserControl.Styles>

    <UserControl.Resources>
        <!-- Skeleton Template for Loading State -->
        <DataTemplate x:Key="DownloadItemSkeletonTemplate" DataType="vm:DownloadItemViewModel">
            <Border Background="#252526" 
                    BorderBrush="#3E3E3E" 
                    BorderThickness="0,0,0,1"
                    Padding="20,16"
                    Height="90"
                    Opacity="0">
                <Border.Transitions>
                    <Transitions>
                        <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                    </Transitions>
                </Border.Transitions>
                <Border.Styles>
                    <Style Selector="Border">
                        <Setter Property="Opacity" Value="1"/>
                    </Style>
                    <Style Selector="Border.shimmer">
                        <Style.Animations>
                            <Animation Duration="0:0:1.5" IterationCount="Infinite" Easing="CubicEaseInOut">
                                <KeyFrame KeyTime="0:0:0">
                                    <Setter Property="Opacity" Value="0.3"/>
                                </KeyFrame>
                                <KeyFrame KeyTime="0:0:0.75">
                                    <Setter Property="Opacity" Value="0.6"/>
                                </KeyFrame>
                                <KeyFrame KeyTime="0:0:1.5">
                                    <Setter Property="Opacity" Value="0.3"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <!-- Album Art Skeleton -->
                    <Border Grid.Column="0" 
                            Width="56" 
                            Height="56" 
                            CornerRadius="4"
                            Background="#333"
                            Margin="0,0,16,0"
                            Classes="shimmer"/>

                    <!-- Track Info Skeleton -->
                    <StackPanel Grid.Column="1" Spacing="8" VerticalAlignment="Center">
                        <Border Height="16" CornerRadius="4" Background="#3A3A3A" Width="320" HorizontalAlignment="Left" Classes="shimmer"/>
                        <Border Height="12" CornerRadius="3" Background="#333" Width="200" HorizontalAlignment="Left" Classes="shimmer"/>
                        <Border Height="6" CornerRadius="3" Background="#2A2A2A" Margin="0,4,0,0" Classes="shimmer"/>
                    </StackPanel>

                    <!-- Action Buttons Skeleton -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <Border Width="32" Height="32" CornerRadius="4" Background="#333" Classes="shimmer"/>
                        <Border Width="32" Height="32" CornerRadius="4" Background="#333" Classes="shimmer"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Actual Download Item Template -->
        <DataTemplate x:Key="DownloadItemTemplate" DataType="vm:DownloadItemViewModel">
            <!-- Download Item Card -->
            <Border Background="#252526" 
                    BorderBrush="#3E3E3E" 
                    BorderThickness="0,0,0,1"
                    Padding="20,16"
                    Classes.express="{Binding IsExpress}">
                <ToolTip.Tip>
                    <ToolTip ShowDelay="0">
                         <TextBlock Text="{Binding ScoreBreakdown}"/>
                    </ToolTip>
                </ToolTip>
                <Border.Transitions>
                    <Transitions>
                        <BrushTransition Property="BorderBrush" Duration="0:0:0.3"/>
                        <BrushTransition Property="Background" Duration="0:0:0.3"/>
                    </Transitions>
                </Border.Transitions>
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="ðŸš€ VIP Pass (Promote to Express)" Command="{Binding PromoteToExpressCommand}"/>
                        <Separator/>
                        <MenuItem Header="Pause" Command="{Binding PauseCommand}"/>
                        <MenuItem Header="Resume" Command="{Binding ResumeCommand}"/>
                        <MenuItem Header="Retry" Command="{Binding RetryCommand}"/>
                        <MenuItem Header="Cancel" Command="{Binding CancelCommand}"/>
                    </ContextMenu>
                </Border.ContextMenu>
                <StackPanel>
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <!-- Album Art & Badge -->
                        <Border Grid.Column="0" 
                                Width="56" 
                                Height="56" 
                                CornerRadius="4"
                                Background="#333"
                                Margin="0,0,16,0">
                            <Grid>
                                <Image Source="{Binding AlbumArtUrl}"
                                       Stretch="UniformToFill"
                                       IsVisible="{Binding !!AlbumArtUrl}"/>
                                <TextBlock Text="ðŸŽµ" 
                                           FontSize="24" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Foreground="#666"
                                           IsVisible="{Binding !AlbumArtUrl}"/>
                                <!-- Badge Overlay -->
                                <Border CornerRadius="10" 
                                        Background="#222" 
                                        HorizontalAlignment="Right" 
                                        VerticalAlignment="Bottom" 
                                        Margin="0,0,-4,-4" 
                                        Padding="2"
                                        Classes.pulsing="{Binding IsSpeculative}">
                                     <TextBlock Text="{Binding BadgeIcon}" FontSize="16"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Track Info & Progress -->
                        <StackPanel Grid.Column="1" Spacing="8" VerticalAlignment="Center">
                            <!-- Track Title -->
                            <TextBlock FontWeight="Bold" FontSize="14" Foreground="White">
                                <Run Text="{Binding ArtistName}"/>
                                <Run Text=" - " Foreground="#666"/>
                                <Run Text="{Binding TrackTitle}"/>
                            </TextBlock>
                            
                            <!-- Album Name -->
                            <TextBlock Text="{Binding AlbumName}" 
                                       FontSize="12" 
                                       Foreground="#A0A0A0"/>
                            
                            <!-- Progress Bar -->
                            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
                                <ProgressBar Grid.Row="0" Grid.Column="0"
                                             Value="{Binding Progress}" 
                                             Maximum="100" 
                                             Height="6" 
                                             Background="#333" 
                                             Foreground="#4CAF50"
                                             CornerRadius="3"/>
                                
                                <!-- Progress Info -->
                                <StackPanel Grid.Row="1" Grid.Column="0"
                                            Orientation="Horizontal" 
                                            Spacing="12" 
                                            Margin="0,4,0,0">
                                    <TextBlock Text="{Binding BytesDisplay}" 
                                               FontSize="11" 
                                               Foreground="#AAA"/>
                                    <TextBlock Text="â€¢" 
                                               FontSize="11" 
                                               Foreground="#666"/>
                                    <TextBlock Text="{Binding SpeedDisplay}" 
                                               FontSize="11" 
                                               Foreground="#00BCD4"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="â€¢" 
                                               FontSize="11" 
                                               Foreground="#666"/>
                                    <!-- Status / Radar -->
                                    <Panel>
                                        <TextBlock Text="{Binding StatusText}" 
                                                   FontSize="11" 
                                                   Foreground="#FFA500"
                                                   IsVisible="{Binding State, Converter={x:Static ObjectConverters.NotEqual}, ConverterParameter={x:Static m:PlaylistTrackState.Searching}}"/>
                                        <ProgressBar IsIndeterminate="True" Width="80" Height="4" Foreground="#FFA500"
                                                     IsVisible="{Binding State, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static m:PlaylistTrackState.Searching}}"/>
                                    </Panel>
                                </StackPanel>
                                
                                <!-- Percent -->
                                <TextBlock Grid.Row="0" Grid.Column="1"
                                           Text="{Binding ProgressPercentText}" 
                                           FontSize="11" 
                                           Foreground="#AAA"
                                           Margin="8,0,0,0"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                        <!-- Actions -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <!-- Filters Toggle -->
                            <ToggleButton IsChecked="{Binding IsFilterExpanded}"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Padding="10,8"
                                          ToolTip.Tip="Track Filters">
                                <TextBlock Text="âš™ï¸" FontSize="16" Foreground="#AAA"/>
                            </ToggleButton>

                            <!-- Pause -->
                            <Button Command="{Binding PauseCommand}"
                                    IsVisible="{Binding CanPause}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="10,8"
                                    ToolTip.Tip="Pause">
                                <TextBlock Text="â¸" FontSize="18" Foreground="#FFC107"/>
                            </Button>
                            
                            <!-- Resume -->
                            <Button Command="{Binding ResumeCommand}"
                                    IsVisible="{Binding CanResume}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="10,8"
                                    ToolTip.Tip="Resume">
                                <TextBlock Text="â–¶" FontSize="18" Foreground="#4CAF50"/>
                            </Button>
                            
                            <!-- Cancel -->
                            <Button Command="{Binding CancelCommand}"
                                    IsVisible="{Binding CanCancel}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="10,8"
                                    ToolTip.Tip="Cancel">
                                <TextBlock Text="âŒ" FontSize="16" Foreground="#F44336"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Filter Panel -->
                    <Border IsVisible="{Binding IsFilterExpanded}"
                            Background="#2D2D30"
                            BorderBrush="#3E3E3E"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,12,0,0">
                        <StackPanel Spacing="12">
                            <TextBlock Text="Track Filter Overrides" FontSize="12" FontWeight="Bold" Foreground="#4CAF50"/>
                            
                            <Grid ColumnDefinitions="*,Auto,*">
                                <!-- Formats -->
                                <StackPanel Grid.Column="0" Spacing="4">
                                    <TextBlock Text="Allowed Formats" FontSize="11" Foreground="#AAA"/>
                                    <TextBox Text="{Binding AllowedFormatsString}" 
                                             Watermark="e.g. mp3, flac"
                                             FontSize="12"
                                             Background="#1E1E1E"
                                             BorderBrush="#3E3E3E"
                                             Padding="8,4"/>
                                </StackPanel>

                                <Separator Grid.Column="1" Width="1" Margin="12,0" Background="#3E3E3E"/>

                                <!-- Bitrate -->
                                <StackPanel Grid.Column="2" Spacing="4">
                                    <TextBlock Text="Min Bitrate (kbps)" FontSize="11" Foreground="#AAA"/>
                                    <NumericUpDown Value="{Binding MinBitrate}" 
                                                  Minimum="0" Maximum="320" Increment="32"
                                                  FontSize="12"
                                                  Background="#1E1E1E"
                                                  BorderBrush="#3E3E3E"
                                                  Padding="8,4"/>
                                </StackPanel>
                            </Grid>

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="Presets:" VerticalAlignment="Center" FontSize="11" Foreground="#AAA"/>
                                <Button Command="{Binding ApplyPresetCommand}" CommandParameter="Strict" Content="Strict" FontSize="11" Padding="8,2" Background="#333"/>
                                <Button Command="{Binding ApplyPresetCommand}" CommandParameter="Balanced" Content="Balanced" FontSize="11" Padding="8,2" Background="#333"/>
                                <Button Command="{Binding ApplyPresetCommand}" CommandParameter="Relaxed" Content="Relaxed" FontSize="11" Padding="8,2" Background="#333"/>
                                
                                <Separator Width="1" Margin="8,4" Background="#3E3E3E"/>
                                
                                <Button Command="{Binding RetryWithFiltersCommand}" 
                                        Content="Apply &amp; Retry" 
                                        IsVisible="{Binding CanRetry}"
                                        Background="#4CAF50" 
                                        Foreground="White" 
                                        FontSize="11" 
                                        Padding="12,2" 
                                        FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- Template Selector for Skeleton/Hydrated Switching -->
        <selectors:DownloadItemTemplateSelector x:Key="DownloadItemSelector"
                                                 SkeletonTemplate="{StaticResource DownloadItemSkeletonTemplate}"
                                                 HydratedTemplate="{StaticResource DownloadItemTemplate}"/>
    </UserControl.Resources>
    
    <Grid RowDefinitions="Auto,*">
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#252526" Padding="24,20" BorderBrush="#3E3E3E" BorderThickness="0,0,0,1">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Spacing="8">
                    <TextBlock Text="Download Center" FontSize="28" FontWeight="Bold" Foreground="White"/>
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <TextBlock Foreground="#A0A0A0" FontSize="13">
                            <Run Text="{Binding ActiveCount}"/>
                            <Run Text=" active" Foreground="#4CAF50"/>
                        </TextBlock>
                        <TextBlock Foreground="#A0A0A0" FontSize="13">
                            <Run Text="{Binding QueuedCount}"/>
                            <Run Text=" queued" Foreground="#FFA500"/>
                        </TextBlock>
                        <TextBlock Foreground="#A0A0A0" FontSize="13">
                            <Run Text="{Binding CompletedTodayCount}"/>
                            <Run Text=" completed" Foreground="#2196F3"/>
                        </TextBlock>
                        <TextBlock Text="{Binding GlobalSpeed, StringFormat='âš¡ {0}'}" 
                                   Foreground="#00BCD4" 
                                   FontSize="13"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Global Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Command="{Binding PauseAllCommand}"
                            Background="#FFA500"
                            Foreground="White"
                            Padding="12,8"
                            CornerRadius="6">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="â¸" FontSize="14"/>
                            <TextBlock Text="Pause All" FontSize="13" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding ResumeAllCommand}"
                            Background="#4CAF50"
                            Foreground="White"
                            Padding="12,8"
                            CornerRadius="6">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="â–¶" FontSize="14"/>
                            <TextBlock Text="Resume All" FontSize="13" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" Background="Transparent" Padding="0">
            <TabControl.Styles>
                <Style Selector="TabItem">
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Padding" Value="16,12"/>
                </Style>
                <Style Selector="TabItem:selected">
                    <Setter Property="Foreground" Value="#4CAF50"/>
                </Style>
            </TabControl.Styles>

            <!-- Active Downloads Tab -->
            <TabItem Header="Active">
                <Grid RowDefinitions="Auto,*">
                    <!-- Empty State -->
                    <Border Grid.Row="1" 
                            IsVisible="{Binding !ActiveCount}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <StackPanel Spacing="12" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“¥" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                            <TextBlock Text="No active downloads" 
                                       FontSize="18" 
                                       Foreground="#808080"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Downloads will appear here automatically" 
                                       FontSize="13" 
                                       Foreground="#606060"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Swimlane View (Air Traffic Control) -->
                    <ScrollViewer Grid.Row="1" IsVisible="{Binding ActiveCount}" VerticalScrollBarVisibility="Auto">
                        <StackPanel Spacing="16" Margin="0,0,0,24">
                            
                            <!-- Lane 1: EXPRESS (Priority 0) -->
                            <Expander IsExpanded="True" 
                                      IsVisible="{Binding ExpressItems.Count}"
                                      BorderBrush="#FFC107"
                                      BorderThickness="1"
                                      CornerRadius="4"
                                      Margin="0,0,0,4">
                                <Expander.Header>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="ðŸš€" FontSize="16"/>
                                        <TextBlock Text="EXPRESS LANE" FontWeight="Bold" Foreground="#FFCA28" FontSize="14" VerticalAlignment="Center"/>
                                        <Border Background="#FFCA28" CornerRadius="10" Padding="8,2" VerticalAlignment="Center" Margin="8,0,0,0">
                                            <TextBlock Text="{Binding ExpressItems.Count}" Foreground="Black" FontWeight="Bold" FontSize="11"/>
                                        </Border>
                                    </StackPanel>
                                </Expander.Header>
                                <ItemsRepeater ItemsSource="{Binding ExpressItems}" ItemTemplate="{StaticResource DownloadItemSelector}">
                                    <ItemsRepeater.Layout>
                                        <StackLayout Spacing="2"/>
                                    </ItemsRepeater.Layout>
                                </ItemsRepeater>
                            </Expander>

                            <!-- Lane 2: STANDARD (Priority 1-9) -->
                            <Expander IsExpanded="True" 
                                      IsVisible="{Binding StandardItems.Count}"
                                      BorderBrush="#3E3E3E"
                                      BorderThickness="1"
                                      CornerRadius="4">
                                <Expander.Header>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="ðŸ“¦" FontSize="16"/>
                                        <TextBlock Text="STANDARD LANE" FontWeight="Bold" Foreground="#2196F3" FontSize="14" VerticalAlignment="Center"/>
                                        <Border Background="#2196F3" CornerRadius="10" Padding="8,2" VerticalAlignment="Center" Margin="8,0,0,0">
                                            <TextBlock Text="{Binding StandardItems.Count}" Foreground="White" FontWeight="Bold" FontSize="11"/>
                                        </Border>
                                    </StackPanel>
                                </Expander.Header>
                                <ItemsRepeater ItemsSource="{Binding StandardItems}" ItemTemplate="{StaticResource DownloadItemSelector}">
                                    <ItemsRepeater.Layout>
                                        <StackLayout Spacing="2"/>
                                    </ItemsRepeater.Layout>
                                </ItemsRepeater>
                            </Expander>

                            <!-- Lane 3: BACKGROUND (Priority >= 10) -->
                            <Expander IsExpanded="False" 
                                      IsVisible="{Binding BackgroundItems.Count}"
                                      BorderBrush="#333"
                                      BorderThickness="1"
                                      CornerRadius="4"
                                      Opacity="0.7">
                                <Expander.Header>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="ðŸŒ™" FontSize="16"/>
                                        <TextBlock Text="BACKGROUND LANE" FontWeight="SemiBold" Foreground="#AAA" FontSize="14" VerticalAlignment="Center"/>
                                        <Border Background="#444" CornerRadius="10" Padding="8,2" VerticalAlignment="Center" Margin="8,0,0,0">
                                            <TextBlock Text="{Binding BackgroundItems.Count}" Foreground="#CCC" FontWeight="Bold" FontSize="11"/>
                                        </Border>
                                    </StackPanel>
                                </Expander.Header>
                                <ItemsRepeater ItemsSource="{Binding BackgroundItems}" ItemTemplate="{StaticResource DownloadItemSelector}">
                                    <ItemsRepeater.Layout>
                                        <StackLayout Spacing="2"/>
                                    </ItemsRepeater.Layout>
                                </ItemsRepeater>
                            </Expander>

                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Completed Downloads Tab -->
            <TabItem Header="Completed">
                <Grid RowDefinitions="Auto,*">
                    <!-- Clear Button -->
                    <Border Grid.Row="0" Background="#1E1E1E" Padding="16,12" BorderBrush="#3E3E3E" BorderThickness="0,0,0,1">
                        <Button Command="{Binding ClearCompletedCommand}"
                                HorizontalAlignment="Right"
                                Background="#333"
                                Foreground="White"
                                Padding="12,8"
                                CornerRadius="6">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="ðŸ—‘ï¸" FontSize="12"/>
                                <TextBlock Text="Clear All" FontSize="13"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Empty State -->
                    <Border Grid.Row="1" 
                            IsVisible="{Binding !CompletedDownloads.Count}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <StackPanel Spacing="12" HorizontalAlignment="Center">
                            <TextBlock Text="âœ…" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                            <TextBlock Text="No completed downloads" 
                                       FontSize="18" 
                                       Foreground="#808080"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Completed List -->
                    <ListBox Grid.Row="1" ItemsSource="{Binding CompletedDownloads}" Background="Transparent" BorderThickness="0">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                            <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#252526" 
                                        BorderBrush="#3E3E3E" 
                                        BorderThickness="0,0,0,1"
                                        Padding="20,12">
                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                        <TextBlock Grid.Column="0" Text="âœ…" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock FontWeight="SemiBold" FontSize="13" Foreground="White">
                                                <Run Text="{Binding ArtistName}"/>
                                                <Run Text=" - " Foreground="#666"/>
                                                <Run Text="{Binding TrackTitle}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding AlbumName}" FontSize="11" Foreground="#808080"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding BytesDisplay}" 
                                                   FontSize="11" 
                                                   Foreground="#808080"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>

            <!-- Failed Downloads Tab -->
            <TabItem Header="Failed">
                <Grid RowDefinitions="Auto,*">
                    <!-- Clear Button -->
                    <Border Grid.Row="0" Background="#1E1E1E" Padding="16,12" BorderBrush="#3E3E3E" BorderThickness="0,0,0,1">
                        <Button Command="{Binding ClearFailedCommand}"
                                HorizontalAlignment="Right"
                                Background="#333"
                                Foreground="White"
                                Padding="12,8"
                                CornerRadius="6">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="ðŸ—‘ï¸" FontSize="12"/>
                                <TextBlock Text="Clear All" FontSize="13"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Empty State -->
                    <Border Grid.Row="1" 
                            IsVisible="{Binding !FailedDownloads.Count}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <StackPanel Spacing="12" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ’¯" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                            <TextBlock Text="No failed downloads" 
                                       FontSize="18" 
                                       Foreground="#808080"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Failed List -->
                    <ListBox Grid.Row="1" ItemsSource="{Binding FailedDownloads}" Background="Transparent" BorderThickness="0">
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                            <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#252526" 
                                        BorderBrush="#3E3E3E" 
                                        BorderThickness="0,0,0,1"
                                        Padding="20,12">
                                    <StackPanel>
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <TextBlock Grid.Column="0" Text="âŒ" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock FontWeight="SemiBold" FontSize="13" Foreground="White">
                                                    <Run Text="{Binding ArtistName}"/>
                                                    <Run Text=" - " Foreground="#666"/>
                                                    <Run Text="{Binding TrackTitle}"/>
                                                </TextBlock>
                                                <TextBlock Text="{Binding AlbumName}" FontSize="11" Foreground="#808080"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                                                <ToggleButton IsChecked="{Binding IsFilterExpanded}"
                                                              Background="Transparent"
                                                              BorderThickness="0"
                                                              Padding="10,8"
                                                              ToolTip.Tip="Track Filters">
                                                    <TextBlock Text="âš™ï¸" FontSize="16" Foreground="#AAA"/>
                                                </ToggleButton>

                                                <Button Command="{Binding RetryCommand}"
                                                        Background="#FF9800"
                                                        Foreground="White"
                                                        Padding="12,6"
                                                        CornerRadius="6">
                                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                                        <TextBlock Text="â™»" FontSize="12"/>
                                                        <TextBlock Text="Retry" FontSize="12" FontWeight="Bold"/>
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Filter Panel -->
                                        <Border IsVisible="{Binding IsFilterExpanded}"
                                                Background="#2D2D30"
                                                BorderBrush="#3E3E3E"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Padding="12"
                                                Margin="0,12,0,0">
                                            <StackPanel Spacing="12">
                                                <TextBlock Text="Track Filter Overrides" FontSize="12" FontWeight="Bold" Foreground="#FF9800"/>
                                                
                                                <Grid ColumnDefinitions="*,Auto,*">
                                                    <StackPanel Grid.Column="0" Spacing="4">
                                                        <TextBlock Text="Allowed Formats" FontSize="11" Foreground="#AAA"/>
                                                        <TextBox Text="{Binding AllowedFormatsString}" 
                                                                 Watermark="e.g. mp3, flac"
                                                                 FontSize="12"
                                                                 Background="#1E1E1E"
                                                                 BorderBrush="#3E3E3E"
                                                                 Padding="8,4"/>
                                                    </StackPanel>

                                                    <Separator Grid.Column="1" Width="1" Margin="12,0" Background="#3E3E3E"/>

                                                    <StackPanel Grid.Column="2" Spacing="4">
                                                        <TextBlock Text="Min Bitrate (kbps)" FontSize="11" Foreground="#AAA"/>
                                                        <NumericUpDown Value="{Binding MinBitrate}" 
                                                                      Minimum="0" Maximum="320" Increment="32"
                                                                      FontSize="12"
                                                                      Background="#1E1E1E"
                                                                      BorderBrush="#3E3E3E"
                                                                      Padding="8,4"/>
                                                    </StackPanel>
                                                </Grid>

                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <TextBlock Text="Presets:" VerticalAlignment="Center" FontSize="11" Foreground="#AAA"/>
                                                    <Button Command="{Binding ApplyPresetCommand}" CommandParameter="Strict" Content="Strict" FontSize="11" Padding="8,2" Background="#333"/>
                                                    <Button Command="{Binding ApplyPresetCommand}" CommandParameter="Balanced" Content="Balanced" FontSize="11" Padding="8,2" Background="#333"/>
                                                    <Button Command="{Binding ApplyPresetCommand}" CommandParameter="Relaxed" Content="Relaxed" FontSize="11" Padding="8,2" Background="#333"/>
                                                    
                                                    <Separator Width="1" Margin="8,4" Background="#3E3E3E"/>
                                                    
                                                    <Button Command="{Binding RetryWithFiltersCommand}" 
                                                            Content="Apply &amp; Retry" 
                                                            Background="#FF9800" 
                                                            Foreground="White" 
                                                            FontSize="11" 
                                                            Padding="12,2" 
                                                            FontWeight="Bold"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
