<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SLSKDONET.ViewModels.Downloads"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="SLSKDONET.Views.Avalonia.DownloadsPage"
             x:DataType="vm:DownloadCenterViewModel"
             Background="#1E1E1E" Foreground="White">
    
    <Grid RowDefinitions="Auto,*">
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#252526" Padding="24,20" BorderBrush="#3E3E3E" BorderThickness="0,0,0,1">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Spacing="8">
                    <TextBlock Text="Download Center" FontSize="28" FontWeight="Bold" Foreground="White"/>
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <TextBlock Foreground="#A0A0A0" FontSize="13">
                            <Run Text="{Binding ActiveCount}"/>
                            <Run Text=" active" Foreground="#4CAF50"/>
                        </TextBlock>
                        <TextBlock Foreground="#A0A0A0" FontSize="13">
                            <Run Text="{Binding QueuedCount}"/>
                            <Run Text=" queued" Foreground="#FFA500"/>
                        </TextBlock>
                        <TextBlock Foreground="#A0A0A0" FontSize="13">
                            <Run Text="{Binding CompletedTodayCount}"/>
                            <Run Text=" completed" Foreground="#2196F3"/>
                        </TextBlock>
                        <TextBlock Text="{Binding GlobalSpeed, StringFormat='âš¡ {0}'}" 
                                   Foreground="#00BCD4" 
                                   FontSize="13"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Global Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Command="{Binding PauseAllCommand}"
                            Background="#FFA500"
                            Foreground="White"
                            Padding="12,8"
                            CornerRadius="6">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="â¸" FontSize="14"/>
                            <TextBlock Text="Pause All" FontSize="13" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding ResumeAllCommand}"
                            Background="#4CAF50"
                            Foreground="White"
                            Padding="12,8"
                            CornerRadius="6">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="â–¶" FontSize="14"/>
                            <TextBlock Text="Resume All" FontSize="13" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tab Control -->
        <TabControl Grid.Row="1" Background="Transparent" Padding="0">
            <TabControl.Styles>
                <Style Selector="TabItem">
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Padding" Value="16,12"/>
                </Style>
                <Style Selector="TabItem:selected">
                    <Setter Property="Foreground" Value="#4CAF50"/>
                </Style>
            </TabControl.Styles>

            <!-- Active Downloads Tab -->
            <TabItem Header="Active">
                <Grid RowDefinitions="Auto,*">
                    <!-- Empty State -->
                    <Border Grid.Row="1" 
                            IsVisible="{Binding !ActiveDownloads.Count}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <StackPanel Spacing="12" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“¥" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                            <TextBlock Text="No active downloads" 
                                       FontSize="18" 
                                       Foreground="#808080"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Downloads will appear here automatically" 
                                       FontSize="13" 
                                       Foreground="#606060"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Download List (Virtualized) -->
                    <ScrollViewer Grid.Row="1">
                        <ItemsControl ItemsSource="{Binding ActiveDownloads}">
                            <!-- Phase 2.5: Virtualization for performance with large lists -->
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Download Item Card -->
                                    <Border Background="#252526" 
                                            BorderBrush="#3E3E3E" 
                                            BorderThickness="0,0,0,1"
                                            Padding="20,16">
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <!-- Album Art -->
                                            <Border Grid.Column="0" 
                                                    Width="56" 
                                                    Height="56" 
                                                    CornerRadius="4"
                                                    Background="#333"
                                                    Margin="0,0,16,0">
                                                <Grid>
                                                    <Image Source="{Binding AlbumArtUrl}"
                                                           Stretch="UniformToFill"
                                                           IsVisible="{Binding !!AlbumArtUrl}"/>
                                                    <TextBlock Text="ðŸŽµ" 
                                                               FontSize="24" 
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Foreground="#666"
                                                               IsVisible="{Binding !AlbumArtUrl}"/>
                                                </Grid>
                                            </Border>

                                            <!-- Track Info & Progress -->
                                            <StackPanel Grid.Column="1" Spacing="8" VerticalAlignment="Center">
                                                <!-- Track Title -->
                                                <TextBlock FontWeight="Bold" FontSize="14" Foreground="White">
                                                    <Run Text="{Binding ArtistName}"/>
                                                    <Run Text=" - " Foreground="#666"/>
                                                    <Run Text="{Binding TrackTitle}"/>
                                                </TextBlock>
                                                
                                                <!-- Album Name -->
                                                <TextBlock Text="{Binding AlbumName}" 
                                                           FontSize="12" 
                                                           Foreground="#A0A0A0"/>
                                                
                                                <!-- Progress Bar -->
                                                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
                                                    <ProgressBar Grid.Row="0" Grid.Column="0"
                                                                 Value="{Binding Progress}" 
                                                                 Maximum="100" 
                                                                 Height="6" 
                                                                 Background="#333" 
                                                                 Foreground="#4CAF50"
                                                                 CornerRadius="3"/>
                                                    
                                                    <!-- Progress Info -->
                                                    <StackPanel Grid.Row="1" Grid.Column="0"
                                                                Orientation="Horizontal" 
                                                                Spacing="12" 
                                                                Margin="0,4,0,0">
                                                        <TextBlock Text="{Binding BytesDisplay}" 
                                                                   FontSize="11" 
                                                                   Foreground="#AAA"/>
                                                        <TextBlock Text="â€¢" 
                                                                   FontSize="11" 
                                                                   Foreground="#666"/>
                                                        <TextBlock Text="{Binding SpeedDisplay}" 
                                                                   FontSize="11" 
                                                                   Foreground="#00BCD4"
                                                                   FontWeight="SemiBold"/>
                                                        <TextBlock Text="â€¢" 
                                                                   FontSize="11" 
                                                                   Foreground="#666"/>
                                                        <TextBlock Text="{Binding StatusText}" 
                                                                   FontSize="11" 
                                                                   Foreground="#FFA500"/>
                                                    </StackPanel>
                                                    
                                                    <!-- Percent -->
                                                    <TextBlock Grid.Row="0" Grid.Column="1"
                                                               Text="{Binding ProgressPercentText}" 
                                                               FontSize="11" 
                                                               Foreground="#AAA"
                                                               Margin="8,0,0,0"
                                                               VerticalAlignment="Center"/>
                                                </Grid>
                                            </StackPanel>

                                            <!-- Action Buttons -->
                                            <StackPanel Grid.Column="2" 
                                                        Orientation="Horizontal" 
                                                        Spacing="6"
                                                        VerticalAlignment="Center">
                                                <!-- Pause -->
                                                <Button Command="{Binding PauseCommand}"
                                                        IsVisible="{Binding CanPause}"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Padding="10,8"
                                                        ToolTip.Tip="Pause">
                                                    <TextBlock Text="â¸" FontSize="18" Foreground="#FFC107"/>
                                                </Button>
                                                
                                                <!-- Resume -->
                                                <Button Command="{Binding ResumeCommand}"
                                                        IsVisible="{Binding CanResume}"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Padding="10,8"
                                                        ToolTip.Tip="Resume">
                                                    <TextBlock Text="â–¶" FontSize="18" Foreground="#4CAF50"/>
                                                </Button>
                                                
                                                <!-- Cancel -->
                                                <Button Command="{Binding CancelCommand}"
                                                        IsVisible="{Binding CanCancel}"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Padding="10,8"
                                                        ToolTip.Tip="Cancel">
                                                    <TextBlock Text="âŒ" FontSize="16" Foreground="#F44336"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Completed Downloads Tab -->
            <TabItem Header="Completed">
                <Grid RowDefinitions="Auto,*">
                    <!-- Clear Button -->
                    <Border Grid.Row="0" Background="#1E1E1E" Padding="16,12" BorderBrush="#3E3E3E" BorderThickness="0,0,0,1">
                        <Button Command="{Binding ClearCompletedCommand}"
                                HorizontalAlignment="Right"
                                Background="#333"
                                Foreground="White"
                                Padding="12,8"
                                CornerRadius="6">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="ðŸ—‘ï¸" FontSize="12"/>
                                <TextBlock Text="Clear All" FontSize="13"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Empty State -->
                    <Border Grid.Row="1" 
                            IsVisible="{Binding !CompletedDownloads.Count}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <StackPanel Spacing="12" HorizontalAlignment="Center">
                            <TextBlock Text="âœ…" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                            <TextBlock Text="No completed downloads" 
                                       FontSize="18" 
                                       Foreground="#808080"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Completed List -->
                    <ScrollViewer Grid.Row="1">
                        <ItemsControl ItemsSource="{Binding CompletedDownloads}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#252526" 
                                            BorderBrush="#3E3E3E" 
                                            BorderThickness="0,0,0,1"
                                            Padding="20,12">
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <TextBlock Grid.Column="0" Text="âœ…" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock FontWeight="SemiBold" FontSize="13" Foreground="White">
                                                    <Run Text="{Binding ArtistName}"/>
                                                    <Run Text=" - " Foreground="#666"/>
                                                    <Run Text="{Binding TrackTitle}"/>
                                                </TextBlock>
                                                <TextBlock Text="{Binding AlbumName}" FontSize="11" Foreground="#808080"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="2" 
                                                       Text="{Binding BytesDisplay}" 
                                                       FontSize="11" 
                                                       Foreground="#808080"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <!-- Failed Downloads Tab -->
            <TabItem Header="Failed">
                <Grid RowDefinitions="Auto,*">
                    <!-- Clear Button -->
                    <Border Grid.Row="0" Background="#1E1E1E" Padding="16,12" BorderBrush="#3E3E3E" BorderThickness="0,0,0,1">
                        <Button Command="{Binding ClearFailedCommand}"
                                HorizontalAlignment="Right"
                                Background="#333"
                                Foreground="White"
                                Padding="12,8"
                                CornerRadius="6">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="ðŸ—‘ï¸" FontSize="12"/>
                                <TextBlock Text="Clear All" FontSize="13"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Empty State -->
                    <Border Grid.Row="1" 
                            IsVisible="{Binding !FailedDownloads.Count}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <StackPanel Spacing="12" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ’¯" FontSize="48" HorizontalAlignment="Center" Opacity="0.3"/>
                            <TextBlock Text="No failed downloads" 
                                       FontSize="18" 
                                       Foreground="#808080"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Failed List -->
                    <ScrollViewer Grid.Row="1">
                        <ItemsControl ItemsSource="{Binding FailedDownloads}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#252526" 
                                            BorderBrush="#3E3E3E" 
                                            BorderThickness="0,0,0,1"
                                            Padding="20,12">
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <TextBlock Grid.Column="0" Text="âŒ" FontSize="20" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock FontWeight="SemiBold" FontSize="13" Foreground="White">
                                                    <Run Text="{Binding ArtistName}"/>
                                                    <Run Text=" - " Foreground="#666"/>
                                                    <Run Text="{Binding TrackTitle}"/>
                                                </TextBlock>
                                                <TextBlock Text="{Binding AlbumName}" FontSize="11" Foreground="#808080"/>
                                            </StackPanel>
                                            <Button Grid.Column="2"
                                                    Command="{Binding RetryCommand}"
                                                    Background="#FF9800"
                                                    Foreground="White"
                                                    Padding="12,6"
                                                    CornerRadius="6"
                                                    VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                    <TextBlock Text="â™»" FontSize="12"/>
                                                    <TextBlock Text="Retry" FontSize="12" FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
