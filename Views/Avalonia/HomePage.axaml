<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="SLSKDONET.Views.Avalonia.HomePage"
             Background="#0D0D0D">
    
    <Grid RowDefinitions="Auto,*" Margin="40">
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,32">
            <TextBlock Text="ðŸ  Home" FontSize="32" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Welcome to ORBIT" FontSize="16" Foreground="#A0A0A0" Margin="0,8,0,0"/>
        </StackPanel>
        
        <!-- Dashboard Grid -->
        <ScrollViewer Grid.Row="1">
            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,*,*">
                
                <!-- Stats Cards Row 1 -->
                <Border Grid.Row="0" Grid.Column="0" Background="#1A1A1A" BorderBrush="#3E3E3E" BorderThickness="1" CornerRadius="12" Padding="24" Margin="0,0,12,12">
                    <StackPanel Spacing="12">
                        <TextBlock Text="ðŸ“š" FontSize="32"/>
                        <TextBlock Text="Library Tracks" FontSize="14" Foreground="#A0A0A0"/>
                        <TextBlock Text="{Binding AllGlobalTracks.Count}" FontSize="36" FontWeight="Bold" Foreground="#00A3FF"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Row="0" Grid.Column="1" Background="#1A1A1A" BorderBrush="#3E3E3E" BorderThickness="1" CornerRadius="12" Padding="24">
                    <StackPanel Spacing="12">
                        <TextBlock Text="âœ“" FontSize="32" Foreground="#4CAF50"/>
                        <TextBlock Text="Downloaded" FontSize="14" Foreground="#A0A0A0"/>
                        <TextBlock Text="{Binding SuccessfulCount}" FontSize="36" FontWeight="Bold" Foreground="#4CAF50"/>
                    </StackPanel>
                </Border>
                
                <Border Grid.Row="0" Grid.Column="2" Background="#1A1A1A" BorderBrush="#3E3E3E" BorderThickness="1" CornerRadius="12" Padding="24">
                    <StackPanel Spacing="12">
                        <TextBlock Text="â¬‡ï¸" FontSize="32" Foreground="#FFA500"/>
                        <TextBlock Text="In Progress" FontSize="14" Foreground="#A0A0A0"/>
                        <TextBlock Text="{Binding TodoCount}" FontSize="36" FontWeight="Bold" Foreground="#FFA500"/>
                    </StackPanel>
                </Border>
                
                <!-- Quick Actions Row 2 -->
                <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Background="#1A1A1A" BorderBrush="#3E3E3E" BorderThickness="1" CornerRadius="12" Padding="24">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Quick Actions" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Button Command="{Binding NavigateSearchCommand}" 
                                    Background="#0078D4" 
                                    Foreground="White" 
                                    Padding="20,12"
                                    CornerRadius="8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="ðŸ”" FontSize="16"/>
                                    <TextBlock Text="Search Music" FontSize="14" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Command="{Binding NavigateLibraryCommand}" 
                                    Background="#1DB954" 
                                    Foreground="White" 
                                    Padding="20,12"
                                    CornerRadius="8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="ðŸ“š" FontSize="16"/>
                                    <TextBlock Text="View Library" FontSize="14" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Command="{Binding NavigateImportCommand}" 
                                    Background="#FF6B6B" 
                                    Foreground="White" 
                                    Padding="20,12"
                                    CornerRadius="8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="ðŸ“¥" FontSize="16"/>
                                    <TextBlock Text="Import Playlist" FontSize="14" FontWeight="Medium"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Connection Status Row 3 -->
                <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Background="#1A1A1A" BorderBrush="#3E3E3E" BorderThickness="1" CornerRadius="12" Padding="24">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Connection Status" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <Border Background="#1A4CAF50" BorderBrush="#4CAF50" BorderThickness="1" CornerRadius="6" Padding="12,6">
                                <TextBlock Text="{Binding ConnectionStatus}" FontSize="13" Foreground="#4CAF50" FontWeight="Medium"/>
                            </Border>
                            <TextBlock Text="{Binding StatusText}" FontSize="13" Foreground="#A0A0A0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
