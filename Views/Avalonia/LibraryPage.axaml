<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ds="clr-namespace:DraggingService;assembly=Simple-Avalonia-DragnDrop-Service"
             xmlns:vm="clr-namespace:SLSKDONET.ViewModels"
             xmlns:controls="clr-namespace:SLSKDONET.Views.Avalonia.Controls"
             xmlns:views="clr-namespace:SLSKDONET.Views.Avalonia"
             xmlns:conv="clr-namespace:SLSKDONET.Views.Avalonia.Converters"
             xmlns:tree="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.TreeDataGrid"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="SLSKDONET.Views.Avalonia.LibraryPage"
             Background="#1E1E1E" Foreground="White">

    <UserControl.Resources>
        <conv:RankColorConverter x:Key="RankColorConverter"/>
        <conv:BooleanToRedBrushConverter x:Key="BooleanToRedBrushConverter"/>
        <conv:UpgradeStatusToVisibleConverter x:Key="UpgradeStatusToVisibleConverter"/>
        <conv:BitmapValueConverter x:Key="BitmapValueConverter"/>
    </UserControl.Resources>

    <Grid ColumnDefinitions="280,Auto,*,Auto,Auto">
        
        <!-- LEFT PANEL: Playlist List -->
        <Border Grid.Column="0" Background="#202020" BorderBrush="#3E3E3E" BorderThickness="0,0,1,0">
            <Grid RowDefinitions="Auto,*,Auto">
                
                <!-- Header / Tools -->
                <Grid Grid.Row="0" Margin="12,16,12,8" ColumnDefinitions="*,Auto">
                     <TextBlock Text="LIBRARY" FontSize="12" FontWeight="Bold" Foreground="#888" VerticalAlignment="Center"/>
                     
                     <DropDownButton Content="Tools" Classes="tool" CornerRadius="4" Padding="8,4" FontSize="12">
                         <DropDownButton.Flyout>
                             <MenuFlyout>
                                 <MenuItem Header="Import History" Command="{Binding ViewHistoryCommand}">
                                     <MenuItem.Icon>ðŸ“œ</MenuItem.Icon>
                                 </MenuItem>
                                 <MenuItem Header="Upgrade Scout (Soon)" Command="{Binding ToggleUpgradeScoutCommand}" IsEnabled="False" ToolTip.Tip="Feature coming in Phase 8">
                                     <MenuItem.Icon>ðŸ’Ž</MenuItem.Icon>
                                 </MenuItem>
                                 <MenuItem Header="New Smart Playlist" Command="{Binding Projects.AddPlaylistCommand}">
                                     <MenuItem.Icon>âš¡</MenuItem.Icon>
                                 </MenuItem>
                                 <MenuItem Header="Retry Offline Tracks" Command="{Binding Operations.RetryOfflineTracksCommand}">
                                     <MenuItem.Icon>ðŸ”„</MenuItem.Icon>
                                 </MenuItem>
                                 <Separator/>
                                 <MenuItem Header="Export Monthly Drop" Command="{Binding ExportMonthlyDropCommand}">
                                     <MenuItem.Icon>ðŸ“€</MenuItem.Icon>
                                 </MenuItem>
                             </MenuFlyout>
                         </DropDownButton.Flyout>
                     </DropDownButton>
                </Grid>

                <!-- Navigation List -->
                <ScrollViewer Grid.Row="1">
                    <StackPanel Spacing="2">
                        <!-- Pinned / Special -->
                        <ListBox ItemsSource="{Binding SmartPlaylists.SmartPlaylists}"
                                 SelectedItem="{Binding SmartPlaylists.SelectedSmartPlaylist, Mode=TwoWay}"
                                 Background="Transparent" BorderThickness="0" Padding="0" Margin="0,0,0,8">
                            <ListBox.Styles>
                                <Style Selector="ListBoxItem">
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="CornerRadius" Value="4"/>
                                    <Setter Property="Margin" Value="8,0"/>
                                </Style>
                            </ListBox.Styles>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="12">
                                        <Border Width="24" Height="24" CornerRadius="4" Background="#333" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Icon}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="13"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        
                        <!-- Actions as List Items -->
                        <Button Command="{Binding Projects.ImportLikedSongsCommand}" Classes="nav-item" Margin="8,0">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Width="24" Height="24" CornerRadius="4" Background="#281111" VerticalAlignment="Center">
                                    <TextBlock Text="â¤ï¸" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Liked Songs" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding Projects.LoadAllTracksCommand}" Classes="nav-item" Margin="8,0">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Width="24" Height="24" CornerRadius="4" Background="#111128" VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ“š" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="All Tracks" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Separator Height="1" Background="#333" Margin="12,8"/>

                        <!-- Project Search -->
                        <Border Background="#2D2D2D" 
                                BorderBrush="#333" 
                                BorderThickness="1"
                                CornerRadius="8"
                                Margin="8,8,8,12"
                                Padding="10,2">
                            <Grid ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" 
                                          Text="ðŸ”" 
                                          FontSize="12" 
                                          VerticalAlignment="Center"
                                          Foreground="#666"/>
                                <TextBox Grid.Column="1"
                                        Text="{Binding Projects.SearchText, Mode=TwoWay}" 
                                        Watermark="Filter projects..." 
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="12"
                                        Padding="8,6"
                                        Foreground="White"/>
                            </Grid>
                        </Border>

                        <!-- User Playlists -->
                        <TextBlock Text="PLAYLISTS" FontSize="11" FontWeight="Bold" Foreground="#666" Margin="16,0,16,8"/>
                        
                        <ListBox ItemsSource="{Binding Projects.FilteredProjects}" 
                                 SelectedItem="{Binding Projects.SelectedProject, Mode=TwoWay}"
                                 Background="Transparent" BorderThickness="0" Padding="0">
                            <ListBox.Styles>
                                <Style Selector="ListBoxItem">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="8,2"/>
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </ListBox.Styles>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <controls:CompactPlaylistTemplate DataContext="{Binding}"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>

                <!-- Bottom Actions -->
                <StackPanel Grid.Row="2" Margin="12,12" Spacing="8">
                    <Button Command="{Binding Projects.AddPlaylistCommand}" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <TextBlock Text="âž•"/>
                            <TextBlock Text="New Playlist"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding DeleteProjectCommand}" 
                            CommandParameter="{Binding SelectedProject}"
                            Classes="danger"
                            IsVisible="{Binding !!SelectedProject}"
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Center">
                         <TextBlock Text="Delete Project"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Sidebar Splitter -->
        <GridSplitter Grid.Column="1" Width="1" Background="#3E3E3E" HorizontalAlignment="Center"/>
        
        <!-- RIGHT PANEL: Track List -->
        <Grid Grid.Column="2" RowDefinitions="Auto,Auto,*">
            
            <!-- Toolbar -->
            <Border Grid.Row="0" Background="#252526" BorderBrush="#3E3E3E" BorderThickness="0,0,0,1" Padding="20,16">
                <Grid ColumnDefinitions="*,Auto">
                    <!-- Left: Search and Filters -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
                        <!-- Modern Search Box -->
                        <Border Background="#2D2D2D" 
                                BorderBrush="#3E3E3E" 
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="12,0"
                                Width="300">
                            <Grid ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" 
                                          Text="ðŸ”" 
                                          FontSize="14" 
                                          VerticalAlignment="Center"
                                          Margin="0,0,8,0"
                                          Foreground="#888"/>
                                <TextBox Grid.Column="1"
                                        Text="{Binding SearchText, Mode=TwoWay}" 
                                        Watermark="Search tracks..." 
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="0,10"
                                        Foreground="White"/>
                            </Grid>
                        </Border>
                        
                        <!-- Chip-style Filters -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <ToggleButton Content="All" 
                                         IsChecked="{Binding Tracks.IsFilterAll, Mode=TwoWay}"
                                         Classes="chip"
                                         Padding="16,8"/>
                            <ToggleButton Content="Downloaded" 
                                         IsChecked="{Binding Tracks.IsFilterDownloaded, Mode=TwoWay}"
                                         Classes="chip"
                                         Padding="16,8"/>
                            <ToggleButton Content="Pending" 
                                         IsChecked="{Binding Tracks.IsFilterPending, Mode=TwoWay}"
                                         Classes="chip"
                                         Padding="16,8"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Right: Icon Actions -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                        <Button Command="{Binding Tracks.SelectAllTracksCommand}"
                                Classes="icon-button"
                                IsVisible="{Binding Tracks.FilteredTracks.Count}"
                                ToolTip.Tip="Select All">
                            <TextBlock Text="â˜‘ï¸" FontSize="16"/>
                        </Button>
                        
                        <Button Command="{Binding Tracks.DeselectAllTracksCommand}"
                                Classes="icon-button"
                                IsVisible="{Binding Tracks.HasSelectedTracks}"
                                ToolTip.Tip="Deselect All">
                            <TextBlock Text="â˜" FontSize="16"/>
                        </Button>
                        
                        <Button Command="{Binding ToggleEditModeCommand}"
                                Classes="icon-button"
                                ToolTip.Tip="Toggle Edit Mode">
                            <TextBlock Text="âœï¸" FontSize="16"/>
                        </Button>
                        
                        <Button Command="{Binding RefreshLibraryCommand}"
                                Classes="icon-button"
                                ToolTip.Tip="Refresh Library">
                            <TextBlock Text="ðŸ”„" FontSize="16"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Active Downloads HUD -->
            <Border Grid.Row="1" 
                    Background="#252526" 
                    BorderBrush="#3E3E3E" 
                    BorderThickness="0,0,0,1" 
                    Padding="16,12"
                    IsVisible="{Binding IsActiveDownloadsVisible}">
                <Grid RowDefinitions="Auto,Auto">
                    <!-- Header + Stats + Controls -->
                    <Grid ColumnDefinitions="*,Auto" Grid.Row="0">
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                            <TextBlock Text="â¬‡ï¸ Downloads" FontWeight="Bold" FontSize="14" Foreground="White"/>
                            
                            <!-- Stats Pucks -->
                            <Border Background="#333" CornerRadius="10" Padding="8,2">
                                <TextBlock FontSize="12">
                                    <Run Text="{Binding MainViewModel.TodoCount}" Foreground="#4EC9B0" FontWeight="Bold"/>
                                    <Run Text=" active" Foreground="#AAA"/>
                                </TextBlock>
                            </Border>
                            
                            <Border Background="#333" CornerRadius="10" Padding="8,2" IsVisible="{Binding MainViewModel.FailedCount}">
                                <TextBlock FontSize="12">
                                    <Run Text="{Binding MainViewModel.FailedCount}" Foreground="#F44336" FontWeight="Bold"/>
                                    <Run Text=" failed" Foreground="#AAA"/>
                                </TextBlock>
                            </Border>
                            
                            <TextBlock Text="{Binding MainViewModel.DownloadProgressPercentage, StringFormat='{}{0:F0}%'}" 
                                       Foreground="#888" 
                                       VerticalAlignment="Center" 
                                       FontSize="12"/>
                        </StackPanel>
                        
                        <!-- Quick Actions -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <Button Command="{Binding MainViewModel.ResumeAllDownloadsCommand}"
                                    Background="#2E7D32" 
                                    Foreground="White" 
                                    Padding="12,6" 
                                    CornerRadius="4" 
                                    ToolTip.Tip="Resume All Downloads"
                                    FontSize="12">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <TextBlock Text="â–¶"/>
                                    <TextBlock Text="Resume"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Command="{Binding MainViewModel.PauseAllDownloadsCommand}"
                                    Background="#EF6C00" 
                                    Foreground="White" 
                                    Padding="12,6" 
                                    CornerRadius="4" 
                                    ToolTip.Tip="Pause All Downloads"
                                    FontSize="12">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <TextBlock Text="â¸"/>
                                    <TextBlock Text="Pause"/>
                                </StackPanel>
                            </Button>
                            
                            <Border Width="1" Height="16" Background="#444" Margin="4,0"/>
                            
                            <Button Command="{Binding ToggleActiveDownloadsCommand}" 
                                    Background="Transparent" 
                                    Padding="8,6"
                                    Foreground="#888"
                                    ToolTip.Tip="Hide Panel">
                                <TextBlock Text="âœ•"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Progress Bar -->
                    <ProgressBar Grid.Row="1" 
                                 Margin="0,12,0,0" 
                                 Value="{Binding MainViewModel.DownloadProgressPercentage}" 
                                 Maximum="100" 
                                 Height="4" 
                                 Background="#333" 
                                 Foreground="#4EC9B0"
                                 CornerRadius="2"/>
                </Grid>
            </Border>

            <!-- Track TreeDataGrid -->
            <Grid Grid.Row="2">
                <TreeDataGrid x:Name="TracksTreeDataGrid"
                              Source="{Binding Tracks.Hierarchical.Source}"
                              Background="Transparent"
                              BorderThickness="0"
                              Foreground="#DDD"
                              DoubleTapped="OnTreeDataGridDoubleTapped">
                    <TreeDataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add to Queue" 
                                      Command="{Binding $parent[UserControl].((vm:LibraryViewModel)DataContext).PlayerViewModel.AddToQueueCommand}"
                                      CommandParameter="{Binding Source.Selection.SelectedItem}">
                                 <MenuItem.Icon>
                                     <TextBlock Text="ðŸ“‹"/>
                                 </MenuItem.Icon>
                            </MenuItem>
                            
                            <MenuItem Header="Download Album" 
                                      Command="{Binding $parent[UserControl].((vm:LibraryViewModel)DataContext).DownloadAlbumCommand}"
                                      CommandParameter="{Binding Source.Selection.SelectedItem}">
                                 <MenuItem.Icon>
                                     <TextBlock Text="ðŸ’¿"/>
                                 </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </TreeDataGrid.ContextMenu>
                    <TreeDataGrid.Styles>
                        <Style Selector="TreeDataGridRow">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="MinHeight" Value="32"/>
                            <Setter Property="Transitions">
                                <Transitions>
                                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                                </Transitions>
                            </Setter>
                        </Style>
                        <Style Selector="TreeDataGridRow:pointerover">
                            <Setter Property="Background" Value="#1AFFFFFF"/>
                        </Style>
                        <Style Selector="TreeDataGridRow:selected">
                            <Setter Property="Background" Value="#2A0078D4"/>
                        </Style>
                        <Style Selector="TreeDataGridColumnHeader">
                            <Setter Property="Foreground" Value="#AAA"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Padding" Value="8,4"/>
                        </Style>
                    </TreeDataGrid.Styles>
                </TreeDataGrid>

                <!-- Phase 6D: Shimmer Loading Overlay -->
                <Border Background="#CC1A1A1A"
                        IsVisible="{Binding IsLoading}"
                        ZIndex="100">
                    <StackPanel VerticalAlignment="Center" Spacing="20" Margin="40">
                        <Border Classes="skeleton" Height="30" CornerRadius="4"/>
                        <Border Classes="skeleton" Height="24" Width="400" HorizontalAlignment="Left" CornerRadius="4"/>
                        <Border Classes="skeleton" Height="24" CornerRadius="4"/>
                        <Border Classes="skeleton" Height="24" Width="300" HorizontalAlignment="Left" CornerRadius="4"/>
                        <Border Classes="skeleton" Height="24" CornerRadius="4"/>
                    </StackPanel>
                </Border>
                </Grid>

            <!-- Floating Action Bar (Multi-Select) -->
            <Border Grid.Row="2" 
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Center" 
                    Margin="0,0,0,32"
                    Background="#252526"
                    BorderBrush="#4EC9B0"
                    BorderThickness="1"
                    CornerRadius="8"
                    BoxShadow="0 4 20 0 #A0000000"
                    Padding="16,10"
                    IsVisible="{Binding Tracks.HasMultiSelection}"
                    ZIndex="50">
                <StackPanel Orientation="Horizontal" Spacing="20">
                    <TextBlock Text="{Binding Tracks.SelectedCountText}" VerticalAlignment="Center" FontWeight="SemiBold" Foreground="#4EC9B0"/>
                    
                    <Separator Width="1" Height="16" Background="#444"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Command="{Binding Tracks.BulkDownloadCommand}" Classes="accent" Theme="{StaticResource SimpleButton}">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="ðŸ’¾"/>
                                <TextBlock Text="Download Selected"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding Tracks.CopyToFolderCommand}" Classes="accent" Theme="{StaticResource SimpleButton}">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="ðŸ“‚"/>
                                <TextBlock Text="Copy to Folder"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding Tracks.BulkRetryCommand}" Theme="{StaticResource SimpleButton}">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="ðŸ”„"/>
                                <TextBlock Text="Retry Failed"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding Tracks.BulkCancelCommand}" Classes="danger" Theme="{StaticResource SimpleButton}">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="âœ•"/>
                                <TextBlock Text="Cancel Active"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding Tracks.BulkReEnrichCommand}" Theme="{StaticResource SimpleButton}">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="ðŸ”"/>
                                <TextBlock Text="Re-Enrich Metadata"/>
                            </StackPanel>
                        </Button>
                        
                        <Separator Width="1" Height="16" Background="#444" Margin="8,0"/>
                        
                        <Button Command="{Binding Tracks.DeselectAllTracksCommand}" Background="Transparent" BorderThickness="0">
                            <TextBlock Text="Clear Selection" Foreground="#888"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>


    </Grid>
</UserControl>
