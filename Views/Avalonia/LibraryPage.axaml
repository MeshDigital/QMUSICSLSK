<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="SLSKDONET.Views.Avalonia.LibraryPage"
             Background="#1E1E1E" Foreground="White">
    
    <Grid ColumnDefinitions="280,*">
        
        <!-- LEFT PANEL: Playlist List -->
        <Border Grid.Column="0" Background="#252526" BorderBrush="#3E3E3E" BorderThickness="0,0,1,0">
            <Grid RowDefinitions="Auto,Auto,*,Auto">
                
                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="16,16,16,12">
                    <TextBlock Text="Library" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Imported Playlists" FontSize="12" Foreground="#A0A0A0" Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- Actions -->
                <StackPanel Grid.Row="1" Margin="16,0,16,12" Spacing="8">
                    <Button Command="{Binding AddPlaylistCommand}" 
                            Classes="nav"
                            HorizontalContentAlignment="Left"
                            Padding="12,10">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="âž•" FontSize="16"/>
                            <TextBlock Text="New Playlist" FontSize="13"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding ViewHistoryCommand}" 
                            Classes="nav"
                            HorizontalContentAlignment="Left"
                            Padding="12,10">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="ðŸ“œ" FontSize="16"/>
                            <TextBlock Text="Import History" FontSize="13"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Delete Playlist Button -->
                    <Button Command="{Binding DeleteProjectCommand}" 
                            CommandParameter="{Binding SelectedProject}"
                            Classes="nav"
                            HorizontalContentAlignment="Left"
                            Padding="12,10"
                            IsEnabled="{Binding !!SelectedProject}"
                            ToolTip.Tip="Delete selected playlist">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="ðŸ—‘ï¸" FontSize="16"/>
                            <TextBlock Text="Delete Playlist" FontSize="13" Foreground="#FF6B6B"/>
                        </StackPanel>
                    </Button>
                    
                </StackPanel>
                
                <!-- Playlist List -->
                <ListBox Grid.Row="2" 
                         ItemsSource="{Binding AllProjects}"
                         SelectedItem="{Binding SelectedProject, Mode=TwoWay}"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="8,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="12,10" CornerRadius="4" Margin="0,2">
                                <Grid RowDefinitions="Auto,Auto,Auto">
                                    <TextBlock Grid.Row="0" 
                                               Text="{Binding SourceTitle}" 
                                               FontWeight="Medium" 
                                               Foreground="White"
                                               TextTrimming="CharacterEllipsis"/>
                                    
                                    <TextBlock Grid.Row="1" 
                                               Text="{Binding SourceType}" 
                                               FontSize="11" 
                                               Foreground="#888"
                                               Margin="0,2,0,4"/>
                                    
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="{Binding SuccessfulCount, StringFormat='{}{0} âœ“'}" 
                                                   FontSize="11" 
                                                   Foreground="#4CAF50"/>
                                        <TextBlock Text="{Binding MissingCount, StringFormat='{}{0} â³'}" 
                                                   FontSize="11" 
                                                   Foreground="#FFA500"/>
                                        <TextBlock Text="{Binding FailedCount, StringFormat='{}{0} âœ—'}" 
                                                   FontSize="11" 
                                                   Foreground="#F44336"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <!-- Bottom Actions -->
                <StackPanel Grid.Row="3" Margin="16,12,16,16" Spacing="8">
                    <Button Command="{Binding RefreshLibraryCommand}" 
                            Background="#0078D4" 
                            Foreground="White" 
                            Padding="12,8"
                            HorizontalContentAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="ðŸ”„"/>
                            <TextBlock Text="Refresh Library"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- RIGHT PANEL: Track List -->
        <Grid Grid.Column="1" RowDefinitions="Auto,Auto,*">
            
            <!-- Toolbar -->
            <Border Grid.Row="0" Background="#252526" BorderBrush="#3E3E3E" BorderThickness="0,0,0,1" Padding="16,12">
                <Grid ColumnDefinitions="*,Auto">
                    <!-- Left: Search and Filters -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                        <TextBox Text="{Binding SearchText, Mode=TwoWay}" 
                                 Watermark="Search tracks..." 
                                 Width="250"
                                 Padding="10,8"/>
                        
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <RadioButton Content="All" 
                                         IsChecked="{Binding IsFilterAll, Mode=TwoWay}"
                                         Foreground="White"/>
                            <RadioButton Content="Downloaded" 
                                         IsChecked="{Binding IsFilterDownloaded, Mode=TwoWay}"
                                         Foreground="White"/>
                            <RadioButton Content="Pending" 
                                         IsChecked="{Binding IsFilterPending, Mode=TwoWay}"
                                         Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Right: Actions -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                        <Button Command="{Binding SelectAllTracksCommand}"
                                Classes="nav"
                                Padding="10,6"
                                IsVisible="{Binding !!FilteredTracks.Count}">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="â˜‘ï¸"/>
                                <TextBlock Text="Select All"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding DeselectAllTracksCommand}"
                                Classes="nav"
                                Padding="10,6"
                                IsVisible="{Binding HasSelectedTracks}">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="â˜"/>
                                <TextBlock Text="Deselect"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding ToggleEditModeCommand}"
                                Classes="nav"
                                Padding="10,6">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="âœï¸"/>
                                <TextBlock Text="{Binding IsEditMode, Converter={StaticResource BoolToEditModeTextConverter}}"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding RefreshLibraryCommand}"
                                Classes="nav"
                                Padding="10,6"
                                ToolTip.Tip="Refresh library and resolve missing file paths">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <TextBlock Text="ðŸ”„"/>
                                <TextBlock Text="Refresh"/>
                            </Stackanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Active Downloads HUD -->
            <Border Grid.Row="1" 
                    Background="#1A4CAF50" 
                    BorderBrush="#4CAF50" 
                    BorderThickness="0,0,0,1" 
                    Padding="16,12"
                    IsVisible="{Binding IsActiveDownloadsVisible}">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="â¬‡ï¸ Active Downloads" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="{Binding MaxDownloads, StringFormat='Max: {0}'}" Foreground="#A0A0A0"/>
                    </StackPanel>
                    
                    <Button Grid.Column="2" 
                            Command="{Binding ToggleActiveDownloadsCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            Padding="8,4">
                        <TextBlock Text="âœ•"/>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Track DataGrid -->
            <DataGrid Grid.Row="2"
                      x:Name="TrackDataGrid"
                      ItemsSource="{Binding FilteredTracks}"
                      AutoGenerateColumns="False"
                      Background="Transparent"
                      BorderThickness="0"
                      GridLinesVisibility="Horizontal"
                      RowBackground="Transparent"
                      Foreground="#DDD"
                      HeadersVisibility="Column"
                      CanUserReorderColumns="False"
                      CanUserResizeColumns="True"
                      CanUserSortColumns="False"
                      IsReadOnly="{Binding IsDataGridReadOnly}"
                      DragDrop.AllowDrop="True">
                
                <!-- Row Styles for Visual Feedback -->
                <DataGrid.Styles>
                    <Style Selector="DataGridRow:pointerover">
                        <Setter Property="Background" Value="#1AFFFFFF"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>
                    <Style Selector="DataGridRow:selected">
                        <Setter Property="Background" Value="#2A0078D4"/>
                    </Style>
                </DataGrid.Styles>
                
                <DataGrid.Columns>
                    <!-- # -->
                    <DataGridTextColumn Header="#" 
                                        Binding="{Binding SortOrder}" 
                                        Width="50" 
                                        IsReadOnly="True"/>
                    
                    <!-- Title -->
                    <DataGridTextColumn Header="Title" 
                                        Binding="{Binding Title}" 
                                        Width="3*"/>
                    
                    <!-- Artist -->
                    <DataGridTextColumn Header="Artist" 
                                        Binding="{Binding Artist}" 
                                        Width="2*"/>
                    
                    <!-- Album -->
                    <DataGridTextColumn Header="Album" 
                                        Binding="{Binding Album}" 
                                        Width="2*"/>
                    
                    <!-- Status -->
                    <DataGridTemplateColumn Header="Status" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="4" 
                                        Padding="8,4" 
                                        Background="{Binding StatusColor}"
                                        HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding State}" 
                                               FontSize="11" 
                                               Foreground="White"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Progress -->
                    <DataGridTemplateColumn Header="Progress" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ProgressBar Value="{Binding Progress}" 
                                             Maximum="1" 
                                             Height="6" 
                                             Background="#333" 
                                             Foreground="#4CAF50"
                                             BorderThickness="0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Actions -->
                    <DataGridTemplateColumn Header="Actions" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <Button Command="{Binding $parent[DataGrid].((vm:LibraryViewModel)DataContext).PlayTrackCommand}"
                                            CommandParameter="{Binding}"
                                            Background="#0078D4"
                                            Foreground="White"
                                            Padding="6,4"
                                            ToolTip.Tip="Play">
                                        <TextBlock Text="â–¶ï¸" FontSize="12"/>
                                    </Button>
                                    
                                    <Button Command="{Binding $parent[DataGrid].((vm:LibraryViewModel)DataContext).RemoveTrackCommand}"
                                            CommandParameter="{Binding}"
                                            Background="#F44336"
                                            Foreground="White"
                                            Padding="6,4"
                                            ToolTip.Tip="Remove"
                                            IsVisible="{Binding $parent[DataGrid].((vm:LibraryViewModel)DataContext).IsEditMode}">
                                        <TextBlock Text="ðŸ—‘ï¸" FontSize="12"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
