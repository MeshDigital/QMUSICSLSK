<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ds="clr-namespace:DraggingService;assembly=Simple-Avalonia-DragnDrop-Service"
             xmlns:vm="clr-namespace:SLSKDONET.ViewModels"
             xmlns:controls="clr-namespace:SLSKDONET.Views.Avalonia.Controls"
             xmlns:views="clr-namespace:SLSKDONET.Views.Avalonia"
             xmlns:conv="clr-namespace:SLSKDONET.Views.Avalonia.Converters"
             xmlns:tree="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls.TreeDataGrid"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="SLSKDONET.Views.Avalonia.LibraryPage"
             Background="#1E1E1E" Foreground="White">

    <UserControl.Resources>
        <conv:RankColorConverter x:Key="RankColorConverter"/>
        <conv:BooleanToRedBrushConverter x:Key="BooleanToRedBrushConverter"/>
        <conv:UpgradeStatusToVisibleConverter x:Key="UpgradeStatusToVisibleConverter"/>
    </UserControl.Resources>

    <Grid ColumnDefinitions="280,*,Auto">
        
        <!-- LEFT PANEL: Playlist List -->
        <Border Grid.Column="0" Background="#252526" BorderBrush="#3E3E3E" BorderThickness="0,0,1,0">
            <Grid RowDefinitions="Auto,Auto,*,Auto">
                
                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="16,16,16,12">
                    <TextBlock Text="Library" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Imported Playlists" FontSize="12" Foreground="#A0A0A0" Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- Actions -->
                <StackPanel Grid.Row="1" Margin="16,0,16,12" Spacing="8">
                    <!-- Smart Playlists -->
                    <TextBlock Text="Smart Playlists" FontSize="12" Foreground="#A0A0A0" Margin="0,4,0,4"/>
                    
                    <ListBox ItemsSource="{Binding SmartPlaylists.SmartPlaylists}"
                             SelectedItem="{Binding SmartPlaylists.SelectedSmartPlaylist, Mode=TwoWay}"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="0">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Spacing="4"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="8,6"/>
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <TextBlock Text="{Binding Icon}" FontSize="16"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="13"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <Rectangle Height="1" Fill="#3E3E3E" Margin="0,8"/>

                    <Button Command="{Binding Projects.ImportLikedSongsCommand}"
                            Classes="nav"
                            HorizontalContentAlignment="Left"
                            Padding="12,10"
                            Foreground="#1DB954">
                         <StackPanel Orientation="Horizontal" Spacing="10">
                             <TextBlock Text="â¤ï¸" FontSize="16"/>
                             <TextBlock Text="Import Liked Songs" FontSize="13" FontWeight="SemiBold"/>
                         </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding AddPlaylistCommand}" 
                            Classes="nav"
                            HorizontalContentAlignment="Left"
                            Padding="12,10">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="âž•" FontSize="16"/>
                            <TextBlock Text="New Playlist" FontSize="13"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding ViewHistoryCommand}" 
                            Classes="nav"
                            HorizontalContentAlignment="Left"
                            Padding="12,10">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="ðŸ“œ" FontSize="16"/>
                            <TextBlock Text="Import History" FontSize="13"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding ToggleUpgradeScoutCommand}" 
                            Classes="nav"
                            HorizontalContentAlignment="Left"
                            Padding="12,10"
                            Foreground="#B388FF">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="ðŸ’Ž" FontSize="16"/>
                            <TextBlock Text="Upgrade Scout" FontSize="13" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Delete Playlist Button -->
                    <Button Command="{Binding DeleteProjectCommand}" 
                            CommandParameter="{Binding SelectedProject}"
                            Classes="nav"
                            HorizontalContentAlignment="Left"
                            Padding="12,10"
                            IsEnabled="{Binding !!SelectedProject}"
                            ToolTip.Tip="Delete selected playlist">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="ðŸ—‘ï¸" FontSize="16"/>
                            <TextBlock Text="Delete Playlist" FontSize="13" Foreground="#FF6B6B"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Retry Offline Tracks Button -->
                    <Button Command="{Binding RetryOfflineTracksCommand}" 
                            Classes="nav"
                            HorizontalContentAlignment="Left"
                            Padding="12,10"
                            ToolTip.Tip="Retry all failed/offline tracks">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="ðŸ”„" FontSize="16"/>
                            <TextBlock Text="Retry Offline" FontSize="13" Foreground="#FFA500"/>
                        </StackPanel>
                    </Button>
                    
                </StackPanel>
                <!-- Playlist Grid - Phase 6A: Bento Grid Layout -->
                <ScrollViewer Grid.Row="2" 
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Projects.AllProjects}"
                                  Margin="12">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <controls:AlbumCard DataContext="{Binding}" Margin="8"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Bottom Actions -->
                <StackPanel Grid.Row="3" Margin="16,12,16,16" Spacing="8">
                    <Button Command="{Binding RefreshLibraryCommand}" 
                            Background="#0078D4" 
                            Foreground="White" 
                            Padding="12,8"
                            HorizontalContentAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="ðŸ”„"/>
                            <TextBlock Text="Refresh Library"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- RIGHT PANEL: Track List -->
        <Grid Grid.Column="1" RowDefinitions="Auto,Auto,*">
            
            <!-- Toolbar -->
            <Border Grid.Row="0" Background="#252526" BorderBrush="#3E3E3E" BorderThickness="0,0,0,1" Padding="20,16">
                <Grid ColumnDefinitions="*,Auto">
                    <!-- Left: Search and Filters -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
                        <!-- Modern Search Box -->
                        <Border Background="#2D2D2D" 
                                BorderBrush="#3E3E3E" 
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="12,0"
                                Width="300">
                            <Grid ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" 
                                          Text="ðŸ”" 
                                          FontSize="14" 
                                          VerticalAlignment="Center"
                                          Margin="0,0,8,0"
                                          Foreground="#888"/>
                                <TextBox Grid.Column="1"
                                        Text="{Binding SearchText, Mode=TwoWay}" 
                                        Watermark="Search tracks..." 
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="0,10"
                                        Foreground="White"/>
                            </Grid>
                        </Border>
                        
                        <!-- Chip-style Filters -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <ToggleButton Content="All" 
                                         IsChecked="{Binding IsFilterAll, Mode=TwoWay}"
                                         Classes="chip"
                                         Padding="16,8"/>
                            <ToggleButton Content="Downloaded" 
                                         IsChecked="{Binding IsFilterDownloaded, Mode=TwoWay}"
                                         Classes="chip"
                                         Padding="16,8"/>
                            <ToggleButton Content="Pending" 
                                         IsChecked="{Binding IsFilterPending, Mode=TwoWay}"
                                         Classes="chip"
                                         Padding="16,8"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Right: Icon Actions -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                        <Button Command="{Binding SelectAllTracksCommand}"
                                Classes="icon-button"
                                IsVisible="{Binding !!FilteredTracks.Count}"
                                ToolTip.Tip="Select All">
                            <TextBlock Text="â˜‘ï¸" FontSize="16"/>
                        </Button>
                        
                        <Button Command="{Binding DeselectAllTracksCommand}"
                                Classes="icon-button"
                                IsVisible="{Binding HasSelectedTracks}"
                                ToolTip.Tip="Deselect All">
                            <TextBlock Text="â˜" FontSize="16"/>
                        </Button>
                        
                        <Button Command="{Binding ToggleEditModeCommand}"
                                Classes="icon-button"
                                ToolTip.Tip="Toggle Edit Mode">
                            <TextBlock Text="âœï¸" FontSize="16"/>
                        </Button>
                        
                        <Button Command="{Binding RefreshLibraryCommand}"
                                Classes="icon-button"
                                ToolTip.Tip="Refresh Library">
                            <TextBlock Text="ðŸ”„" FontSize="16"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Active Downloads HUD -->
            <Border Grid.Row="1" 
                    Background="#252526" 
                    BorderBrush="#3E3E3E" 
                    BorderThickness="0,0,0,1" 
                    Padding="16,12"
                    IsVisible="{Binding IsActiveDownloadsVisible}">
                <Grid RowDefinitions="Auto,Auto">
                    <!-- Header + Stats + Controls -->
                    <Grid ColumnDefinitions="*,Auto" Grid.Row="0">
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16" VerticalAlignment="Center">
                            <TextBlock Text="â¬‡ï¸ Downloads" FontWeight="Bold" FontSize="14" Foreground="White"/>
                            
                            <!-- Stats Pucks -->
                            <Border Background="#333" CornerRadius="10" Padding="8,2">
                                <TextBlock FontSize="12">
                                    <Run Text="{Binding MainViewModel.TodoCount}" Foreground="#4EC9B0" FontWeight="Bold"/>
                                    <Run Text=" active" Foreground="#AAA"/>
                                </TextBlock>
                            </Border>
                            
                            <Border Background="#333" CornerRadius="10" Padding="8,2" IsVisible="{Binding MainViewModel.FailedCount}">
                                <TextBlock FontSize="12">
                                    <Run Text="{Binding MainViewModel.FailedCount}" Foreground="#F44336" FontWeight="Bold"/>
                                    <Run Text=" failed" Foreground="#AAA"/>
                                </TextBlock>
                            </Border>
                            
                            <TextBlock Text="{Binding MainViewModel.DownloadProgressPercentage, StringFormat='{}{0:F0}%'}" 
                                       Foreground="#888" 
                                       VerticalAlignment="Center" 
                                       FontSize="12"/>
                        </StackPanel>
                        
                        <!-- Quick Actions -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <Button Command="{Binding MainViewModel.ResumeAllDownloadsCommand}"
                                    Background="#2E7D32" 
                                    Foreground="White" 
                                    Padding="12,6" 
                                    CornerRadius="4" 
                                    ToolTip.Tip="Resume All Downloads"
                                    FontSize="12">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <TextBlock Text="â–¶"/>
                                    <TextBlock Text="Resume"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Command="{Binding MainViewModel.PauseAllDownloadsCommand}"
                                    Background="#EF6C00" 
                                    Foreground="White" 
                                    Padding="12,6" 
                                    CornerRadius="4" 
                                    ToolTip.Tip="Pause All Downloads"
                                    FontSize="12">
                                <StackPanel Orientation="Horizontal" Spacing="6">
                                    <TextBlock Text="â¸"/>
                                    <TextBlock Text="Pause"/>
                                </StackPanel>
                            </Button>
                            
                            <Border Width="1" Height="16" Background="#444" Margin="4,0"/>
                            
                            <Button Command="{Binding ToggleActiveDownloadsCommand}" 
                                    Background="Transparent" 
                                    Padding="8,6"
                                    Foreground="#888"
                                    ToolTip.Tip="Hide Panel">
                                <TextBlock Text="âœ•"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Progress Bar -->
                    <ProgressBar Grid.Row="1" 
                                 Margin="0,12,0,0" 
                                 Value="{Binding MainViewModel.DownloadProgressPercentage}" 
                                 Maximum="100" 
                                 Height="4" 
                                 Background="#333" 
                                 Foreground="#4EC9B0"
                                 CornerRadius="2"/>
                </Grid>
            </Border>

            <!-- Track TreeDataGrid -->
            <Grid Grid.Row="2">
                <TreeDataGrid x:Name="TracksTreeDataGrid"
                              Source="{Binding Tracks.Hierarchical.Source}"
                              Background="Transparent"
                              BorderThickness="0"
                              Foreground="#DDD"
                              CanUserResizeColumns="True"
                              DoubleTapped="OnTreeDataGridDoubleTapped">
                    <TreeDataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add to Queue" 
                                      Command="{Binding $parent[UserControl].((vm:LibraryViewModel)DataContext).PlayerViewModel.AddToQueueCommand}"
                                      CommandParameter="{Binding Source.Selection.SelectedItem}">
                                 <MenuItem.Icon>
                                     <TextBlock Text="ðŸ“‹"/>
                                 </MenuItem.Icon>
                            </MenuItem>
                            
                            <MenuItem Header="Download Album" 
                                      Command="{Binding $parent[UserControl].((vm:LibraryViewModel)DataContext).DownloadAlbumCommand}"
                                      CommandParameter="{Binding Source.Selection.SelectedItem}">
                                 <MenuItem.Icon>
                                     <TextBlock Text="ðŸ’¿"/>
                                 </MenuItem.Icon>
                            </MenuItem>
                        </ContextMenu>
                    </TreeDataGrid.ContextMenu>
                    <TreeDataGrid.Styles>
                        <Style Selector="TreeDataGridRow">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="MinHeight" Value="48"/>
                            <Setter Property="Transitions">
                                <Transitions>
                                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                                </Transitions>
                            </Setter>
                        </Style>
                        <Style Selector="TreeDataGridRow:pointerover">
                            <Setter Property="Background" Value="#1AFFFFFF"/>
                        </Style>
                        <Style Selector="TreeDataGridRow:selected">
                            <Setter Property="Background" Value="#2A0078D4"/>
                        </Style>
                        <Style Selector="TreeDataGridColumnHeader">
                            <Setter Property="Foreground" Value="#AAA"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="12"/>
                            <Setter Property="Padding" Value="12,8"/>
                        </Style>
                    </TreeDataGrid.Styles>
                </TreeDataGrid>

                <!-- Phase 6D: Shimmer Loading Overlay -->
                <Border Background="#CC1A1A1A"
                        IsVisible="{Binding IsLoading}"
                        ZIndex="100">
                    <StackPanel VerticalAlignment="Center" Spacing="20" Margin="40">
                        <Border Classes="skeleton" Height="30" CornerRadius="4"/>
                        <Border Classes="skeleton" Height="24" Width="400" HorizontalAlignment="Left" CornerRadius="4"/>
                        <Border Classes="skeleton" Height="24" CornerRadius="4"/>
                        <Border Classes="skeleton" Height="24" Width="300" HorizontalAlignment="Left" CornerRadius="4"/>
                        <Border Classes="skeleton" Height="24" CornerRadius="4"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- RIGHT PANEL: Track Inspector -->
        <Border Grid.Column="2" 
                Width="320"
                Background="#1A1A1A" 
                BorderBrush="#3E3E3E" 
                BorderThickness="1,0,0,0"
                IsVisible="{Binding IsInspectorVisible}">
            <views:TrackInspectorView DataContext="{Binding TrackInspector}"/>
        </Border>

        <!-- Grid Splitter for Inspector -->
        <GridSplitter Grid.Column="1" 
                      Width="1" 
                      Background="#3E3E3E"
                      IsVisible="{Binding IsInspectorVisible}"/>

        <!-- Phase 8: Upgrade Scout Overlay -->
        <Border Grid.Column="0" Grid.ColumnSpan="3"
                Background="#99000000"
                IsVisible="{Binding IsUpgradeScoutVisible}"
                ZIndex="500">
            <Panel VerticalAlignment="Center" HorizontalAlignment="Center" Width="900" Height="700">
                <views:UpgradeScoutView DataContext="{Binding UpgradeScout}"/>
            </Panel>
        </Border>
    </Grid>
</UserControl>
