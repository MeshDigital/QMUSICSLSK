<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ds="clr-namespace:DraggingService;assembly=Simple-Avalonia-DragnDrop-Service"
             xmlns:vm="clr-namespace:SLSKDONET.ViewModels"
             xmlns:controls="clr-namespace:SLSKDONET.Views.Avalonia.Controls"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="SLSKDONET.Views.Avalonia.LibraryPage"
             Background="#1E1E1E" Foreground="White">

    <Grid ColumnDefinitions="280,*">
        
        <!-- LEFT PANEL: Playlist List -->
        <Border Grid.Column="0" Background="#252526" BorderBrush="#3E3E3E" BorderThickness="0,0,1,0">
            <Grid RowDefinitions="Auto,Auto,*,Auto">
                
                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="16,16,16,12">
                    <TextBlock Text="Library" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Imported Playlists" FontSize="12" Foreground="#A0A0A0" Margin="0,4,0,0"/>
                </StackPanel>
                
                <!-- Actions -->
                <StackPanel Grid.Row="1" Margin="16,0,16,12" Spacing="8">
                    <!-- Smart Playlists -->
                    <TextBlock Text="Smart Playlists" FontSize="12" Foreground="#A0A0A0" Margin="0,4,0,4"/>
                    
                    <ListBox ItemsSource="{Binding SmartPlaylists.SmartPlaylists}"
                             SelectedItem="{Binding SmartPlaylists.SelectedSmartPlaylist, Mode=TwoWay}"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="0">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Spacing="4"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.Styles>
                            <Style Selector="ListBoxItem">
                                <Setter Property="Padding" Value="8,6"/>
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </ListBox.Styles>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <TextBlock Text="{Binding Icon}" FontSize="16"/>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="13"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <Rectangle Height="1" Fill="#3E3E3E" Margin="0,8"/>

                    <Button Command="{Binding Projects.ImportLikedSongsCommand}"
                            Classes="nav"
                            HorizontalContentAlignment="Left"
                            Padding="12,10"
                            Foreground="#1DB954">
                         <StackPanel Orientation="Horizontal" Spacing="10">
                             <TextBlock Text="â¤ï¸" FontSize="16"/>
                             <TextBlock Text="Import Liked Songs" FontSize="13" FontWeight="SemiBold"/>
                         </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding AddPlaylistCommand}" 
                            Classes="nav"
                            HorizontalContentAlignment="Left"
                            Padding="12,10">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="âž•" FontSize="16"/>
                            <TextBlock Text="New Playlist" FontSize="13"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding ViewHistoryCommand}" 
                            Classes="nav"
                            HorizontalContentAlignment="Left"
                            Padding="12,10">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="ðŸ“œ" FontSize="16"/>
                            <TextBlock Text="Import History" FontSize="13"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Delete Playlist Button -->
                    <Button Command="{Binding DeleteProjectCommand}" 
                            CommandParameter="{Binding SelectedProject}"
                            Classes="nav"
                            HorizontalContentAlignment="Left"
                            Padding="12,10"
                            IsEnabled="{Binding !!SelectedProject}"
                            ToolTip.Tip="Delete selected playlist">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="ðŸ—‘ï¸" FontSize="16"/>
                            <TextBlock Text="Delete Playlist" FontSize="13" Foreground="#FF6B6B"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Retry Offline Tracks Button -->
                    <Button Command="{Binding RetryOfflineTracksCommand}" 
                            Classes="nav"
                            HorizontalContentAlignment="Left"
                            Padding="12,10"
                            ToolTip.Tip="Retry all failed/offline tracks">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="ðŸ”„" FontSize="16"/>
                            <TextBlock Text="Retry Offline" FontSize="13" Foreground="#FFA500"/>
                        </StackPanel>
                    </Button>
                    
                </StackPanel>
                <!-- Playlist Grid - Phase 6A: Bento Grid Layout -->
                <ScrollViewer Grid.Row="2" 
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Projects.AllProjects}"
                                  Margin="12">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <controls:AlbumCard DataContext="{Binding}" Margin="8"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                
                <!-- Bottom Actions -->
                <StackPanel Grid.Row="3" Margin="16,12,16,16" Spacing="8">
                    <Button Command="{Binding RefreshLibraryCommand}" 
                            Background="#0078D4" 
                            Foreground="White" 
                            Padding="12,8"
                            HorizontalContentAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="ðŸ”„"/>
                            <TextBlock Text="Refresh Library"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- RIGHT PANEL: Track List -->
        <Grid Grid.Column="1" RowDefinitions="Auto,Auto,*">
            
            <!-- Toolbar -->
            <Border Grid.Row="0" Background="#252526" BorderBrush="#3E3E3E" BorderThickness="0,0,0,1" Padding="20,16">
                <Grid ColumnDefinitions="*,Auto">
                    <!-- Left: Search and Filters -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
                        <!-- Modern Search Box -->
                        <Border Background="#2D2D2D" 
                                BorderBrush="#3E3E3E" 
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="12,0"
                                Width="300">
                            <Grid ColumnDefinitions="Auto,*">
                                <TextBlock Grid.Column="0" 
                                          Text="ðŸ”" 
                                          FontSize="14" 
                                          VerticalAlignment="Center"
                                          Margin="0,0,8,0"
                                          Foreground="#888"/>
                                <TextBox Grid.Column="1"
                                        Text="{Binding SearchText, Mode=TwoWay}" 
                                        Watermark="Search tracks..." 
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="0,10"
                                        Foreground="White"/>
                            </Grid>
                        </Border>
                        
                        <!-- Chip-style Filters -->
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <ToggleButton Content="All" 
                                         IsChecked="{Binding IsFilterAll, Mode=TwoWay}"
                                         Classes="chip"
                                         Padding="16,8"/>
                            <ToggleButton Content="Downloaded" 
                                         IsChecked="{Binding IsFilterDownloaded, Mode=TwoWay}"
                                         Classes="chip"
                                         Padding="16,8"/>
                            <ToggleButton Content="Pending" 
                                         IsChecked="{Binding IsFilterPending, Mode=TwoWay}"
                                         Classes="chip"
                                         Padding="16,8"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Right: Icon Actions -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                        <Button Command="{Binding SelectAllTracksCommand}"
                                Classes="icon-button"
                                IsVisible="{Binding !!FilteredTracks.Count}"
                                ToolTip.Tip="Select All">
                            <TextBlock Text="â˜‘ï¸" FontSize="16"/>
                        </Button>
                        
                        <Button Command="{Binding DeselectAllTracksCommand}"
                                Classes="icon-button"
                                IsVisible="{Binding HasSelectedTracks}"
                                ToolTip.Tip="Deselect All">
                            <TextBlock Text="â˜" FontSize="16"/>
                        </Button>
                        
                        <Button Command="{Binding ToggleEditModeCommand}"
                                Classes="icon-button"
                                ToolTip.Tip="Toggle Edit Mode">
                            <TextBlock Text="âœï¸" FontSize="16"/>
                        </Button>
                        
                        <Button Command="{Binding RefreshLibraryCommand}"
                                Classes="icon-button"
                                ToolTip.Tip="Refresh Library">
                            <TextBlock Text="ðŸ”„" FontSize="16"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Active Downloads HUD -->
            <Border Grid.Row="1" 
                    Background="#1A4CAF50" 
                    BorderBrush="#4CAF50" 
                    BorderThickness="0,0,0,1" 
                    Padding="16,12"
                    IsVisible="{Binding IsActiveDownloadsVisible}">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="â¬‡ï¸ Active Downloads" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="{Binding MaxDownloads, StringFormat='Max: {0}'}" Foreground="#A0A0A0"/>
                    </StackPanel>
                    
                    <Button Grid.Column="2" 
                            Command="{Binding ToggleActiveDownloadsCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            Padding="8,4">
                        <TextBlock Text="âœ•"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Track DataGrid -->
            <DataGrid Grid.Row="2"
                      x:Name="TrackDataGrid"
                      ItemsSource="{Binding Tracks.FilteredTracks}"
                      AutoGenerateColumns="False"
                      Background="Transparent"
                      BorderThickness="0"
                      GridLinesVisibility="Horizontal"
                      RowBackground="Transparent"
                      Foreground="#DDD"
                      HeadersVisibility="Column"
                      CanUserResizeColumns="True"
                      CanUserSortColumns="False"
                      IsReadOnly="{Binding IsDataGridReadOnly}">
                
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Add to Queue" 
                                  Command="{Binding $parent[UserControl].((vm:LibraryViewModel)DataContext).PlayerViewModel.AddToQueueCommand}"
                                  CommandParameter="{Binding}"
                                  InputGesture="Ctrl+Q">
                             <MenuItem.Icon>
                                 <TextBlock Text="ðŸ“‹"/>
                             </MenuItem.Icon>
                        </MenuItem>
                        
                        <MenuItem Header="Download Album" 
                                  Command="{Binding $parent[UserControl].((vm:LibraryViewModel)DataContext).DownloadAlbumCommand}"
                                  CommandParameter="{Binding}">
                             <MenuItem.Icon>
                                 <TextBlock Text="ðŸ’¿"/>
                             </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </DataGrid.ContextMenu>
                
                <DataGrid.Styles>
                    <Style Selector="DataGridRow">
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                    <Style Selector="DataGridRow:pointerover">
                        <Setter Property="Background" Value="#1AFFFFFF"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>
                    <Style Selector="DataGridRow:selected">
                        <Setter Property="Background" Value="#2A0078D4"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                    <Style Selector="DataGridColumnHeader">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                    </Style>
                </DataGrid.Styles>
                
                <DataGrid.Columns>
                    <!-- Album Art -->
                    <DataGridTemplateColumn Header="ðŸŽ¨" Width="60" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Width="40" Height="40" 
                                        CornerRadius="4" 
                                        ClipToBounds="True"
                                        Background="#2D2D2D">
                                    <Image Source="{Binding AlbumArtPath}" 
                                           Stretch="UniformToFill"
                                           IsVisible="{Binding AlbumArtPath, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- # -->
                    <DataGridTextColumn Header="#" 
                                        Binding="{Binding SortOrder}" 
                                        Width="50" 
                                        IsReadOnly="True"/>
                    
                    <!-- Title -->
                    <DataGridTextColumn Header="Title" 
                                        Binding="{Binding Title}" 
                                        Width="3*"/>
                    
                    <!-- Artist -->
                    <DataGridTextColumn Header="Artist" 
                                        Binding="{Binding Artist}" 
                                        Width="2*"/>
                    
                    <!-- Album -->
                    <DataGridTextColumn Header="Album" 
                                        Binding="{Binding Album}" 
                                        Width="2*"/>

                    <!-- Duration -->
                    <DataGridTextColumn Header="ðŸ•’" 
                                        Binding="{Binding DurationDisplay}" 
                                        Width="60"
                                        IsReadOnly="True"/>

                    <!-- Popularity -->
                    <DataGridTemplateColumn Header="ðŸ”¥" Width="80" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ProgressBar Value="{Binding Popularity}" 
                                             Maximum="100" 
                                             Height="4" 
                                             VerticalAlignment="Center"
                                             Margin="4,0"
                                             Background="#333" 
                                             Foreground="#FFA500"
                                             BorderThickness="0"
                                             ToolTip.Tip="{Binding Popularity}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Genres -->
                    <DataGridTextColumn Header="Genres" 
                                        Binding="{Binding GenresDisplay}" 
                                        Width="1.5*"
                                        IsReadOnly="True"/>
                    
                    <!-- Status -->
                    <DataGridTemplateColumn Header="Status" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="4" 
                                        Padding="8,4" 
                                        Background="{Binding StatusColor}"
                                        HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding State}" 
                                               FontSize="11" 
                                               Foreground="White"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Progress -->
                    <DataGridTemplateColumn Header="Progress" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ProgressBar Value="{Binding Progress}" 
                                             Maximum="1" 
                                             Height="6" 
                                             Background="#333" 
                                             Foreground="#4CAF50"
                                             BorderThickness="0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Actions -->
                    <DataGridTemplateColumn Header="Actions" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <Button Command="{Binding $parent[DataGrid].((vm:LibraryViewModel)DataContext).PlayTrackCommand}"
                                            CommandParameter="{Binding}"
                                            Background="#0078D4"
                                            Foreground="White"
                                            Padding="6,4"
                                            ToolTip.Tip="Play">
                                        <TextBlock Text="â–¶ï¸" FontSize="12"/>
                                    </Button>
                                    
                                    <Button Command="{Binding $parent[DataGrid].((vm:LibraryViewModel)DataContext).PlayerViewModel.AddToQueueCommand}"
                                            CommandParameter="{Binding}"
                                            Background="#1DB954"
                                            Foreground="White"
                                            Padding="6,4"
                                            ToolTip.Tip="Add to Queue"
                                            IsVisible="{Binding Model.ResolvedFilePath, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                        <TextBlock Text="ðŸ“‹" FontSize="12"/>
                                    </Button>
                                    
                                    <Button Command="{Binding $parent[DataGrid].((vm:LibraryViewModel)DataContext).RemoveTrackCommand}"
                                            CommandParameter="{Binding}"
                                            Background="#F44336"
                                            Foreground="White"
                                            Padding="6,4"
                                            ToolTip.Tip="Remove"
                                            IsVisible="{Binding $parent[DataGrid].((vm:LibraryViewModel)DataContext).IsEditMode}">
                                        <TextBlock Text="ðŸ—‘ï¸" FontSize="12"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
