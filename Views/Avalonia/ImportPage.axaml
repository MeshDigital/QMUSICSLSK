<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="SLSKDONET.Views.Avalonia.ImportPage"
             Background="#0D0D0D">
    
    <Grid RowDefinitions="Auto,*" Margin="40">
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,32">
            <TextBlock Text="ðŸ“¥ Import" FontSize="32" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Import playlists from external sources" FontSize="16" Foreground="#A0A0A0" Margin="0,8,0,0"/>
        </StackPanel>
        
        <!-- Import Options Grid -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="24">
                
                <!-- Spotify Import -->
                <Border Background="#1A1A1A" BorderBrush="#3E3E3E" BorderThickness="1" CornerRadius="12" Padding="32">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <TextBlock Text="ðŸŽµ" FontSize="48"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Spotify Liked Songs" FontSize="20" FontWeight="SemiBold" Foreground="White"/>
                                <TextBlock Text="Import your Spotify liked songs library" FontSize="14" Foreground="#A0A0A0" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <Button Command="{Binding LibraryViewModel.Projects.ImportLikedSongsCommand}"
                                Background="#1DB954"
                                Foreground="White"
                                Padding="24,12"
                                CornerRadius="8"
                                HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="â¤ï¸" FontSize="16"/>
                                <TextBlock Text="Import from Spotify" FontSize="14" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
                
                <!-- CSV Import -->
                <Border Background="#1A1A1A" BorderBrush="#3E3E3E" BorderThickness="1" CornerRadius="12" Padding="32">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <TextBlock Text="ðŸ“„" FontSize="48"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="CSV Import" FontSize="20" FontWeight="SemiBold" Foreground="White"/>
                                <TextBlock Text="Import tracks from a CSV file (Artist, Title, Album)" FontSize="14" Foreground="#A0A0A0" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <Button Background="#0078D4"
                                Foreground="White"
                                Padding="24,12"
                                CornerRadius="8"
                                HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="ðŸ“‚" FontSize="16"/>
                                <TextBlock Text="Select CSV File" FontSize="14" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
                
                <!-- USB Import (Future) -->
                <Border Background="#1A1A1A" BorderBrush="#3E3E3E" BorderThickness="1" CornerRadius="12" Padding="32" Opacity="0.5">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <TextBlock Text="ðŸ’¾" FontSize="48"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="USB Drive Import" FontSize="20" FontWeight="SemiBold" Foreground="White"/>
                                <TextBlock Text="Scan USB drives for music files (Coming Soon)" FontSize="14" Foreground="#A0A0A0" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <Button Background="#666"
                                Foreground="White"
                                Padding="24,12"
                                CornerRadius="8"
                                HorizontalAlignment="Left"
                                IsEnabled="False">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="ðŸ”Œ" FontSize="16"/>
                                <TextBlock Text="Scan USB Drives" FontSize="14" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
