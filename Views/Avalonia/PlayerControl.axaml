<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SLSKDONET.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="90"
             x:Class="SLSKDONET.Views.Avalonia.PlayerControl"
             x:DataType="vm:PlayerViewModel">
    
    <!-- Modern Spotify-like Player Bar -->
    <Border Background="#181818" 
            BorderBrush="#282828" 
            BorderThickness="0,1,0,0"
            Height="90"
            MaxHeight="90">
        <Grid ColumnDefinitions="300,*,300" Margin="16,0">
            
            <!-- LEFT: Track Info & Album Art -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <!-- Album Art Placeholder -->
                <Border Width="56" Height="56" 
                        Background="#282828" 
                        CornerRadius="4">
                    <TextBlock Text="ðŸŽµ" 
                               FontSize="28" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>
                
                <!-- Track Info -->
                <StackPanel VerticalAlignment="Center" Spacing="4">
                    <TextBlock Text="{Binding TrackTitle}" 
                               FontSize="14" 
                               FontWeight="Medium"
                               Foreground="White"
                               TextTrimming="CharacterEllipsis"
                               MaxWidth="200"/>
                    <TextBlock Text="{Binding TrackArtist}" 
                               FontSize="12" 
                               Foreground="#B3B3B3"
                               TextTrimming="CharacterEllipsis"
                               MaxWidth="200"/>
                </StackPanel>
                
                <!-- Like Button -->
                <Button Classes="icon-button" 
                        Width="32" Height="32"
                        VerticalAlignment="Center"
                        ToolTip.Tip="Like">
                    <TextBlock Text="â™¡" FontSize="16" Foreground="#B3B3B3"/>
                </Button>
            </StackPanel>
            
            <!-- CENTER: Playback Controls -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="8">
                <!-- Control Buttons -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Spacing="16">
                    <!-- Shuffle -->
                    <Button Classes="icon-button" 
                            Width="32" Height="32"
                            ToolTip.Tip="Shuffle">
                        <TextBlock Text="ðŸ”€" FontSize="14" Foreground="#B3B3B3"/>
                    </Button>
                    
                    <!-- Previous -->
                    <Button Command="{Binding PreviousCommand}"
                            Classes="icon-button" 
                            Width="32" Height="32"
                            ToolTip.Tip="Previous">
                        <TextBlock Text="â®ï¸" FontSize="16"/>
                    </Button>
                    
                    <!-- Play/Pause -->
                    <Button Command="{Binding PlayPauseCommand}"
                            Background="#1DB954"
                            Foreground="Black"
                            Width="40" Height="40"
                            CornerRadius="20"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#1ED760"/>
                            </Style>
                        </Button.Styles>
                        <TextBlock Text="{Binding IsPlaying, Converter={StaticResource BoolToPlayPauseIconConverter}}" 
                                   FontSize="18"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Button>
                    
                    <!-- Next -->
                    <Button Command="{Binding NextCommand}"
                            Classes="icon-button" 
                            Width="32" Height="32"
                            ToolTip.Tip="Next">
                        <TextBlock Text="â­ï¸" FontSize="16"/>
                    </Button>
                    
                    <!-- Repeat -->
                    <Button Classes="icon-button" 
                            Width="32" Height="32"
                            ToolTip.Tip="Repeat">
                        <TextBlock Text="ðŸ”" FontSize="14" Foreground="#B3B3B3"/>
                    </Button>
                </StackPanel>
                
                <!-- Progress Bar -->
                <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,4,0,0">
                    <!-- Current Time -->
                    <TextBlock Grid.Column="0" 
                               Text="{Binding CurrentTimeStr}" 
                               FontSize="11" 
                               Foreground="#B3B3B3"
                               Margin="0,0,12,0"/>
                    
                    <!-- Seek Bar -->
                    <Slider Grid.Column="1"
                            Minimum="0"
                            Maximum="1"
                            Value="{Binding Position, Mode=TwoWay}"
                            VerticalAlignment="Center"
                            Height="20">
                        <Slider.Styles>
                            <Style Selector="Slider /template/ Thumb">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Width" Value="12"/>
                                <Setter Property="Height" Value="12"/>
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Slider.Styles>
                    </Slider>
                    
                    <!-- Total Time -->
                    <TextBlock Grid.Column="2" 
                               Text="{Binding TotalTimeStr}" 
                               FontSize="11" 
                               Foreground="#B3B3B3"
                               Margin="12,0,0,0"/>
                </Grid>
            </StackPanel>
            
            <!-- RIGHT: Volume & Queue -->
            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        Spacing="12">
                <!-- Queue Button -->
                <Button Classes="icon-button" 
                        Width="32" Height="32"
                        ToolTip.Tip="Queue">
                    <TextBlock Text="ðŸ“‹" FontSize="14" Foreground="#B3B3B3"/>
                </Button>
                
                <!-- Volume -->
                <StackPanel Orientation="Horizontal" Spacing="8" Width="120">
                    <Button Classes="icon-button" 
                            Width="32" Height="32"
                            ToolTip.Tip="Mute">
                        <TextBlock Text="ðŸ”Š" FontSize="14" Foreground="#B3B3B3"/>
                    </Button>
                    
                    <Slider Minimum="0"
                            Maximum="100"
                            Value="{Binding Volume, Mode=TwoWay}"
                            VerticalAlignment="Center"
                            Width="80"
                            Height="20">
                        <Slider.Styles>
                            <Style Selector="Slider /template/ Thumb">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Width" Value="12"/>
                                <Setter Property="Height" Value="12"/>
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Slider.Styles>
                    </Slider>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
