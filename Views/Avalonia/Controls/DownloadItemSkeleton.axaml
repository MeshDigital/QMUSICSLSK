<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="90"
             x:Class="SLSKDONET.Views.Avalonia.Controls.DownloadItemSkeleton">
    
    <UserControl.Styles>
        <!-- Shimmer Animation -->
        <Style Selector="Border.shimmer">
            <Style.Animations>
                <Animation Duration="0:0:1.5" IterationCount="Infinite" Easing="CubicEaseInOut">
                    <KeyFrame KeyTime="0:0:0">
                        <Setter Property="Opacity" Value="0.3"/>
                    </KeyFrame>
                    <KeyFrame KeyTime="0:0:0.75">
                        <Setter Property="Opacity" Value="0.6"/>
                    </KeyFrame>
                    <KeyFrame KeyTime="0:0:1.5">
                        <Setter Property="Opacity" Value="0.3"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </UserControl.Styles>

    <!-- Skeleton Row: Matches exact layout of DownloadItemTemplate -->
    <Border Background="#252526" 
            BorderBrush="#3E3E3E" 
            BorderThickness="0,0,0,1"
            Padding="20,16"
            Height="90">
        <Grid ColumnDefinitions="Auto,*,Auto">
            <!-- Album Art Skeleton -->
            <Border Grid.Column="0" 
                    Width="56" 
                    Height="56" 
                    CornerRadius="4"
                    Background="#333"
                    Margin="0,0,16,0"
                    Classes="shimmer">
                <!-- Placeholder Icon -->
                <TextBlock Text="ðŸŽµ" 
                           FontSize="24" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="#555"
                           Opacity="0.5"/>
            </Border>

            <!-- Track Info Skeleton -->
            <StackPanel Grid.Column="1" Spacing="8" VerticalAlignment="Center">
                <!-- Title Bar (Wider) -->
                <Border Height="16" 
                        CornerRadius="4" 
                        Background="#3A3A3A"
                        Width="320"
                        HorizontalAlignment="Left"
                        Classes="shimmer"/>
                
                <!-- Artist Bar (Narrower) -->
                <Border Height="12" 
                        CornerRadius="3" 
                        Background="#333"
                        Width="200"
                        HorizontalAlignment="Left"
                        Classes="shimmer"/>
                
                <!-- Progress Bar Skeleton -->
                <Border Height="6" 
                        CornerRadius="3" 
                        Background="#2A2A2A"
                        Margin="0,4,0,0"
                        Classes="shimmer">
                    <!-- Animated Progress Pulse -->
                    <Border Background="#404040" 
                            CornerRadius="3"
                            HorizontalAlignment="Left"
                            Width="80">
                        <Border.Transitions>
                            <Transitions>
                                <DoubleTransition Property="Width" Duration="0:0:1.5"/>
                            </Transitions>
                        </Border.Transitions>
                    </Border>
                </Border>

                <!-- Status Text Skeleton -->
                <Border Height="10" 
                        CornerRadius="2" 
                        Background="#2D2D2D"
                        Width="150"
                        HorizontalAlignment="Left"
                        Margin="0,2,0,0"
                        Classes="shimmer"/>
            </StackPanel>

            <!-- Action Buttons Skeleton -->
            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal" 
                        Spacing="8"
                        VerticalAlignment="Center">
                <!-- Button Placeholder 1 -->
                <Border Width="32" 
                        Height="32" 
                        CornerRadius="4"
                        Background="#333"
                        Classes="shimmer"/>
                <!-- Button Placeholder 2 -->
                <Border Width="32" 
                        Height="32" 
                        CornerRadius="4"
                        Background="#333"
                        Classes="shimmer"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
