<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:SLSKDONET.Views.Avalonia"
             mc:Ignorable="d" d:DesignWidth="280" d:DesignHeight="60"
             x:Class="SLSKDONET.Views.Avalonia.Controls.CompactPlaylistTemplate">
    
    <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto,Auto" Margin="4">
        <!-- Tiny Album Art -->
        <Border Grid.Column="0" Grid.RowSpan="2" Width="48" Height="48" CornerRadius="4" ClipToBounds="True" Background="#333">
            <Image Source="{Binding AlbumArtPath, Converter={StaticResource BitmapValueConverter}}" Stretch="UniformToFill"/>
        </Border>

        <!-- Text Info -->
        <StackPanel Grid.Column="1" Grid.Row="0" VerticalAlignment="Top" Margin="10,0,0,0">
            <TextBlock Text="{Binding SourceTitle}" FontWeight="SemiBold" FontSize="13" TextTrimming="CharacterEllipsis"/>
            
            <!-- Stats: Total | Downloaded | Active | Failed -->
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,2,0,0">
                <TextBlock Text="{Binding TotalTracks, StringFormat='{}ðŸ“ {0}'}" FontSize="11" Foreground="#888" ToolTip.Tip="Total tracks"/>
                <TextBlock Text="{Binding SuccessfulCount, StringFormat='{}âœ“ {0}'}" FontSize="11" Foreground="#1DB954" ToolTip.Tip="Downloaded" IsVisible="{Binding SuccessfulCount}"/>
                <TextBlock Text="{Binding ActiveDownloadsCount, StringFormat='{}â†“ {0}'}" FontSize="11" Foreground="#00A3FF" ToolTip.Tip="Downloading" IsVisible="{Binding HasActiveDownloads}"/>
                <TextBlock Text="{Binding FailedCount, StringFormat='{}âœ— {0}'}" FontSize="11" Foreground="#F44336" ToolTip.Tip="Failed" IsVisible="{Binding FailedCount}"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Current Downloading Track (if any) -->
        <Border Grid.Column="1" Grid.Row="1" Margin="10,4,0,0" 
                Background="#00A3FF22" CornerRadius="3" Padding="4,2"
                IsVisible="{Binding CurrentDownloadingTrack, Converter={x:Static ObjectConverters.IsNotNull}}">
            <TextBlock Text="{Binding CurrentDownloadingTrack, StringFormat='{}â†“ {0}'}" 
                       FontSize="10" Foreground="#00A3FF" TextTrimming="CharacterEllipsis"
                       ToolTip.Tip="Currently downloading"/>
        </Border>

        <!-- Controls (Play, Download, Delete) -->
        <StackPanel Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Orientation="Horizontal" VerticalAlignment="Center" Spacing="0" Margin="4,0,0,0">
            <Button Classes="icon-btn" ToolTip.Tip="Play Album" Padding="6" Background="Transparent"
                    Command="{Binding $parent[views:LibraryPage].DataContext.PlayAlbumCommand}"
                    CommandParameter="{Binding}">
                 <TextBlock Text="â–¶ï¸" FontSize="14"/>
            </Button>
            <Button Classes="icon-btn" ToolTip.Tip="Resume Download" Padding="6" Background="Transparent"
                    Command="{Binding $parent[views:LibraryPage].DataContext.DownloadAlbumCommand}"
                    CommandParameter="{Binding}">
                 <TextBlock Text="â¬‡ï¸" FontSize="14"/>
            </Button>
            <Button Classes="icon-btn" ToolTip.Tip="Delete Project" Padding="6" Background="Transparent"
                    Command="{Binding $parent[views:LibraryPage].DataContext.DeleteProjectCommand}"
                    CommandParameter="{Binding}">
                 <TextBlock Text="âŒ" FontSize="12"/>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
