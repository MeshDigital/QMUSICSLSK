<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:SLSKDONET.Views.Avalonia.Converters"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="SLSKDONET.Views.Avalonia.SettingsPage"
             Background="#1E1E1E" Foreground="White">

    <UserControl.Resources>
        <conv:RankColorConverter x:Key="RankColorConverter"/>
    </UserControl.Resources>
    
    <ScrollViewer>
        <StackPanel Margin="24" Spacing="24" MaxWidth="800">
            
            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="Settings" FontSize="28" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Configure your download preferences and Soulseek settings" 
                           FontSize="13" Foreground="#A0A0A0"/>
            </StackPanel>

            <!-- Download Settings -->
            <Border Background="#252526" CornerRadius="8" Padding="20" BorderBrush="#3E3E3E" BorderThickness="1">
                <StackPanel Spacing="16">
                    <TextBlock Text="Download Settings" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                    
                    <!-- Download Folder -->
                    <Grid ColumnDefinitions="180,*,Auto">
                        <TextBlock Grid.Column="0" Text="Download Folder:" VerticalAlignment="Center" Foreground="#DDD"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding DownloadPath, Mode=TwoWay}" 
                                 IsReadOnly="True"
                                 Background="#1E1E1E"
                                 Margin="0,0,8,0"/>
                        <Button Grid.Column="2" 
                                Command="{Binding BrowseDownloadPathCommand}"
                                Background="#0078D4"
                                Foreground="White"
                                Padding="12,8">
                            <TextBlock Text="Browse..."/>
                        </Button>
                    </Grid>
                    
                    <!-- Shared Folder -->
                    <Grid ColumnDefinitions="180,*,Auto">
                        <TextBlock Grid.Column="0" Text="Shared Folder:" VerticalAlignment="Center" Foreground="#DDD"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding SharedFolderPath, Mode=TwoWay}" 
                                 IsReadOnly="True"
                                 Background="#1E1E1E"
                                 Margin="0,0,8,0"/>
                        <Button Grid.Column="2" 
                                Command="{Binding BrowseSharedFolderCommand}"
                                Background="#0078D4"
                                Foreground="White"
                                Padding="12,8">
                            <TextBlock Text="Browse..."/>
                        </Button>
                    </Grid>
                    
                    <!-- Max Concurrent Downloads -->
                    <Grid ColumnDefinitions="180,100,*">
                        <TextBlock Grid.Column="0" Text="Max Concurrent Downloads:" VerticalAlignment="Center" Foreground="#DDD"/>
                        <NumericUpDown Grid.Column="1" 
                                       Value="{Binding MaxConcurrentDownloads, Mode=TwoWay}"
                                       Minimum="1"
                                       Maximum="10"
                                       Increment="1"
                                       Background="#1E1E1E"
                                       Foreground="White"/>
                        <TextBlock Grid.Column="2" 
                                   Text="Limit active downloads to share bandwidth" 
                                   VerticalAlignment="Center" 
                                   Foreground="#666" 
                                   FontSize="11"
                                   Margin="12,0,0,0"/>
                    </Grid>
                    
                    <!-- File Name Format -->
                    <Grid ColumnDefinitions="180,*">
                        <TextBlock Grid.Column="0" Text="File Name Format:" VerticalAlignment="Center" Foreground="#DDD"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding FileNameFormat, Mode=TwoWay}"
                                 Background="#1E1E1E"/>
                    </Grid>
                    <TextBlock Text="Placeholders: {{artist}}, {{title}}, {{album}}, {{filename}}, {{bitrate}}, {{format}}, {{length}}, {{user}}" 
                               Foreground="#666" 
                               FontSize="11"
                               Margin="180,0,0,0"/>
                    
                    <!-- Duplicate Prevention -->
                    <Grid ColumnDefinitions="180,*">
                        <TextBlock Grid.Column="0" Text="Prevent Duplicate Downloads:" VerticalAlignment="Center" Foreground="#DDD"/>
                        <CheckBox Grid.Column="1" 
                                  IsChecked="{Binding CheckForDuplicates, Mode=TwoWay}"
                                  Content="Skip tracks that already exist in library"
                                  Foreground="#AAA"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Search Filter Defaults -->
            <Border Background="#252526" CornerRadius="8" Padding="20" BorderBrush="#3E3E3E" BorderThickness="1">
                <StackPanel Spacing="16">
                    <TextBlock Text="Default Search Filters" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                    
                    <!-- Min Bitrate -->
                    <Grid ColumnDefinitions="180,100,*">
                        <TextBlock Grid.Column="0" Text="Min Bitrate:" VerticalAlignment="Center" Foreground="#DDD"/>
                        <NumericUpDown Grid.Column="1" 
                                       Value="{Binding MinBitrate, Mode=TwoWay}"
                                       Minimum="0"
                                       Maximum="320"
                                       Increment="32"
                                       Background="#1E1E1E"
                                       Foreground="White"/>
                        <TextBlock Grid.Column="2" 
                                   Text="kbps" 
                                   VerticalAlignment="Center" 
                                   Foreground="#666"
                                   Margin="12,0,0,0"/>
                    </Grid>
                    
                    <!-- Max Bitrate -->
                    <Grid ColumnDefinitions="180,100,*">
                        <TextBlock Grid.Column="0" Text="Max Bitrate:" VerticalAlignment="Center" Foreground="#DDD"/>
                        <NumericUpDown Grid.Column="1" 
                                       Value="{Binding MaxBitrate, Mode=TwoWay}"
                                       Minimum="0"
                                       Maximum="320"
                                       Increment="32"
                                       Background="#1E1E1E"
                                       Foreground="White"/>
                        <TextBlock Grid.Column="2" 
                                   Text="kbps" 
                                   VerticalAlignment="Center" 
                                   Foreground="#666"
                                   Margin="12,0,0,0"/>
                    </Grid>
                    
                    <!-- Preferred Formats -->
                    <Grid ColumnDefinitions="180,*">
                        <TextBlock Grid.Column="0" Text="Preferred Formats:" VerticalAlignment="Center" Foreground="#DDD"/>
                        <TextBox Grid.Column="1" 
                                 Text="{Binding PreferredFormats, Mode=TwoWay}"
                                 Background="#1E1E1E"
                                 Watermark="mp3,flac,aac"/>
                    </Grid>
                    <TextBlock Text="Comma-separated list of preferred audio formats" 
                               Foreground="#666" 
                               FontSize="11"
                               Margin="180,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Phase 8: Self-Healing Library (Upgrade Scout) -->
            <Border Background="#252526" CornerRadius="8" Padding="20" BorderBrush="#3E3E3E" BorderThickness="1">
                <StackPanel Spacing="16">
                    <TextBlock Text="Self-Healing Library (Upgrade Scout)" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                    
                    <TextBlock TextWrapping="Wrap" Foreground="#AAA" FontSize="12">
                        Automatically scan your library for low-quality or faked tracks and search for high-fidelity replacements.
                    </TextBlock>

                    <Grid ColumnDefinitions="180,*">
                        <TextBlock Grid.Column="0" Text="Enable Upgrade Scout:" VerticalAlignment="Center" Foreground="#DDD"/>
                        <ToggleSwitch Grid.Column="1" 
                                      IsChecked="{Binding UpgradeScoutEnabled, Mode=TwoWay}"
                                      OnContent="Active" OffContent="Disabled"/>
                    </Grid>

                    <Grid ColumnDefinitions="180,100,*">
                        <TextBlock Grid.Column="0" Text="Min Bitrate Threshold:" VerticalAlignment="Center" Foreground="#DDD"/>
                        <NumericUpDown Grid.Column="1" 
                                       Value="{Binding UpgradeMinBitrateThreshold, Mode=TwoWay}"
                                       Minimum="128"
                                       Maximum="320"
                                       Increment="32"
                                       IsEnabled="{Binding UpgradeScoutEnabled}"
                                       Background="#1E1E1E"/>
                        <TextBlock Grid.Column="2" Text="Upgrade everything below this bitrate" 
                                   VerticalAlignment="Center" Foreground="#666" FontSize="11" Margin="12,0,0,0"/>
                    </Grid>

                    <Grid ColumnDefinitions="180,100,*">
                        <TextBlock Grid.Column="0" Text="Min Quality Gain:" VerticalAlignment="Center" Foreground="#DDD"/>
                        <NumericUpDown Grid.Column="1" 
                                       Value="{Binding UpgradeMinGainKbps, Mode=TwoWay}"
                                       Minimum="0"
                                       Maximum="320"
                                       Increment="32"
                                       IsEnabled="{Binding UpgradeScoutEnabled}"
                                       Background="#1E1E1E"/>
                        <TextBlock Grid.Column="2" Text="Only upgrade if bitrate gain >= this value" 
                                   VerticalAlignment="Center" Foreground="#666" FontSize="11" Margin="12,0,0,0"/>
                    </Grid>

                    <Grid ColumnDefinitions="180,*">
                        <TextBlock Grid.Column="0" Text="Auto-Queue Upgrades:" VerticalAlignment="Center" Foreground="#DDD"/>
                        <CheckBox Grid.Column="1" 
                                  IsChecked="{Binding UpgradeAutoQueueEnabled, Mode=TwoWay}"
                                  IsEnabled="{Binding UpgradeScoutEnabled}"
                                  Content="Automatically queue found upgrades for download"
                                  Foreground="#AAA"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Phase 8: Dependencies (FFmpeg Validation) -->
            <Border Background="#252526" CornerRadius="8" Padding="20" BorderBrush="#3E3E3E" BorderThickness="1">
                <StackPanel Spacing="16">
                    <TextBlock Text="Dependencies" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                    
                    <TextBlock TextWrapping="Wrap" Foreground="#AAA" FontSize="12">
                        Phase 8 features require external dependencies. Ensure these are installed for full functionality.
                    </TextBlock>

                    <!-- FFmpeg Status Card -->
                    <Border Background="#2D2D2D" 
                            CornerRadius="8" 
                            Padding="16" 
                            BorderBrush="{Binding FfmpegBorderColor}" 
                            BorderThickness="2">
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock Text="FFmpeg" 
                                           FontWeight="SemiBold" 
                                           FontSize="14"
                                           Foreground="White"/>
                                <TextBlock Text="{Binding FfmpegStatus}" 
                                           FontSize="12" 
                                           Foreground="#AAA"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" 
                                        Orientation="Horizontal" 
                                        Spacing="8">
                                <Button Command="{Binding CheckFfmpegCommand}" 
                                        Content="Check"
                                        Background="#0078D4"
                                        Foreground="White"
                                        Padding="16,6"/>
                                
                                <Button Content="Download FFmpeg"
                                        Name="DownloadFfmpegButton"
                                        IsVisible="{Binding !IsFfmpegInstalled}"
                                        Background="#1DB954"
                                        Foreground="White"
                                        Padding="16,6"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Warning message if not installed -->
                    <Border Background="#332200" 
                            CornerRadius="4" 
                            Padding="12"
                            IsVisible="{Binding !IsFfmpegInstalled}"
                            BorderBrush="#FFA500"
                            BorderThickness="1">
                        <StackPanel Spacing="8">
                            <TextBlock Text="âš ï¸ FFmpeg is required for:" 
                                       FontSize="12" 
                                       Foreground="#FFA500"
                                       FontWeight="SemiBold"/>
                            <StackPanel Margin="16,0,0,0" Spacing="4">
                                <TextBlock Text="â€¢ Sonic Integrity Analysis (fake FLAC detection)" FontSize="11" Foreground="#DDD"/>
                                <TextBlock Text="â€¢ Quality Guard (spectral frequency analysis)" FontSize="11" Foreground="#DDD"/>
                                <TextBlock Text="â€¢ Spectral Hash de-duplication" FontSize="11" Foreground="#DDD"/>
                            </StackPanel>
                            
                            <Separator Background="#FFA500" Height="1" Margin="0,4"/>
                            
                            <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="#CCC">
                                <Bold>Windows:</Bold> Download from gyan.dev (full builds)
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="#CCC">
                                <Bold>macOS:</Bold> Run: <Span Foreground="#0078D4">brew install ffmpeg</Span>
                            </TextBlock>
                            <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="#CCC">
                                <Bold>Linux:</Bold> Run: <Span Foreground="#0078D4">sudo apt install ffmpeg</Span>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Advanced Ranking & Tuning -->
            <Border Background="#252526" CornerRadius="8" Padding="20" BorderBrush="#3E3E3E" BorderThickness="1">
                <StackPanel Spacing="16">
                    <TextBlock Text="Advanced Ranking &amp; Tuning" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                    
                    <TextBlock TextWrapping="Wrap" Foreground="#AAA" FontSize="12">
                        Tune the search ranking algorithm by adjusting the weights below. Use the "Live Preview" to see how your changes affect result ordering.
                    </TextBlock>
                    
                    <!-- Ranking Preset -->
                    <Grid ColumnDefinitions="180,*">
                        <TextBlock Grid.Column="0" Text="Ranking Preset:" VerticalAlignment="Center" Foreground="#DDD"/>
                        <ComboBox Grid.Column="1" 
                                  ItemsSource="{Binding RankingModes}"
                                  SelectedItem="{Binding SelectedRankingMode}"
                                  HorizontalAlignment="Stretch"
                                  Background="#1E1E1E"/>
                    </Grid>
                    
                    <!-- Weights -->
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="180,*,40">
                        <!-- Quality -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Bitrate Weight:" VerticalAlignment="Center" Foreground="#DDD"/>
                        <Slider Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="3" Value="{Binding QualityWeight}" Margin="0,0,12,0" Foreground="#0078D4"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding QualityWeight, StringFormat={}{0:F1}}" VerticalAlignment="Center" Foreground="#AAA"/>

                        <!-- Musical -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="BPM/Key Weight:" VerticalAlignment="Center" Foreground="#DDD" Margin="0,8,0,0"/>
                        <Slider Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="3" Value="{Binding MusicalWeight}" Margin="0,8,12,0" Foreground="#0078D4"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding MusicalWeight, StringFormat={}{0:F1}}" VerticalAlignment="Center" Foreground="#AAA" Margin="0,8,0,0"/>

                        <!-- Availability -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Availability Weight:" VerticalAlignment="Center" Foreground="#DDD" Margin="0,8,0,0"/>
                        <Slider Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="3" Value="{Binding AvailabilityWeight}" Margin="0,8,12,0" Foreground="#0078D4"/>
                        <TextBlock Grid.Row="2" Grid.Column="2" Text="{Binding AvailabilityWeight, StringFormat={}{0:F1}}" VerticalAlignment="Center" Foreground="#AAA" Margin="0,8,0,0"/>

                        <!-- String Matching -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="String Similarity:" VerticalAlignment="Center" Foreground="#DDD" Margin="0,8,0,0"/>
                        <Slider Grid.Row="3" Grid.Column="1" Minimum="0" Maximum="3" Value="{Binding StringWeight}" Margin="0,8,12,0" Foreground="#0078D4"/>
                        <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding StringWeight, StringFormat={}{0:F1}}" VerticalAlignment="Center" Foreground="#AAA" Margin="0,8,0,0"/>
                    </Grid>

                    <Separator Background="#3E3E3E" Height="1"/>

                    <!-- Live Preview -->
                    <TextBlock Text="Live Preview (Target: deadmau5 - Strobe)" FontSize="14" FontWeight="SemiBold" Foreground="#DDD"/>
                    <Border Background="#1E1E1E" CornerRadius="4" Padding="1">
                        <ListBox ItemsSource="{Binding LivePreviewTracks}" Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*,80,80,100">
                                        <StackPanel Grid.Column="0" Spacing="2">
                                            <TextBlock Text="{Binding Title}" Foreground="White" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Username}" FontSize="10" Foreground="#666"/>
                                        </StackPanel>
                                        <TextBlock Grid.Column="1" Text="{Binding Bitrate, StringFormat={}{0}kbps}" Foreground="#AAA" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                        <TextBlock Grid.Column="2" Text="{Binding Length, StringFormat={}{0}s}" Foreground="#AAA" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0"/>
                                        <TextBlock Grid.Column="3" Text="{Binding CurrentRank, StringFormat={}{0:F0} pts}" Foreground="{Binding CurrentRank, Converter={StaticResource RankColorConverter}}" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Spotify Integration -->
            <Border Background="#252526" CornerRadius="8" Padding="20" BorderBrush="#3E3E3E" BorderThickness="1">
                <StackPanel Spacing="16">
                    <TextBlock Text="Spotify Integration" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                    
                    <TextBlock TextWrapping="Wrap" Foreground="#AAA" FontSize="12">
                        Connect your Spotify account to import private playlists, liked songs, and get better metadata matching.
                    </TextBlock>
                    
                    <!-- Connection Status -->
                    <Grid ColumnDefinitions="180,*">
                        <TextBlock Grid.Column="0" Text="Status:" VerticalAlignment="Center" Foreground="#DDD"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                             <Border CornerRadius="6" 
                                     Padding="12,6"
                                     Background="{Binding SpotifyStatusColor}">
                                 <StackPanel Orientation="Horizontal" Spacing="8">
                                     <PathIcon Data="{StaticResource icons_spotify}" Width="16" Height="16" IsVisible="{Binding IsSpotifyConnected}"/>
                                     <TextBlock Text="{Binding SpotifyStatusIcon}" FontSize="14" IsVisible="{Binding IsSpotifyConnected, Converter={StaticResource BoolInverseConverter}}"/>
                                     <TextBlock Text="{Binding SpotifyDisplayName}" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                                 </StackPanel>
                             </Border>
                             
                             <TextBlock Text="Authentication Active..." 
                                        IsVisible="{Binding IsAuthenticating}" 
                                        VerticalAlignment="Center" 
                                        FontSize="12" 
                                        Foreground="#1DB954"/>
                        </StackPanel>
                    </Grid>

                    <!-- Client ID (Optional Override) -->
                    <Expander Header="Advanced Options" IsExpanded="False">
                        <Grid ColumnDefinitions="180,*">
                            <TextBlock Grid.Column="0" Text="Spotify Client ID:" VerticalAlignment="Center" Foreground="#DDD"/>
                            <TextBox Grid.Column="1" 
                                     Text="{Binding SpotifyClientId, Mode=TwoWay}"
                                     Background="#1E1E1E"
                                     Watermark="Default (QMUSICSLSK)"/>
                        </Grid>
                    </Expander>

                    <!-- Diagnostic: Clear credentials on exit -->
                    <Grid ColumnDefinitions="180,*">
                        <TextBlock Grid.Column="0" Text="Clear on Exit (diag):" VerticalAlignment="Center" Foreground="#DDD"/>
                        <CheckBox Grid.Column="1"
                                  IsChecked="{Binding ClearSpotifyOnExit, Mode=TwoWay}"
                                  Content="Clear cached Spotify credentials when the app closes"
                                  Foreground="#AAA"/>
                    </Grid>

                    <!-- Connect/Disconnect Buttons -->
                    <StackPanel Orientation="Horizontal" Spacing="12" Margin="180,0,0,0" IsVisible="{Binding IsAuthenticating, Converter={StaticResource BoolInverseConverter}}">
                        <Button Command="{Binding ConnectSpotifyCommand}"
                                IsVisible="{Binding IsSpotifyConnected, Converter={StaticResource BoolInverseConverter}}"
                            IsEnabled="{Binding IsAuthenticating, Converter={StaticResource BoolInverseConverter}}"
                                Background="#1DB954"
                                Padding="20,10"
                                CornerRadius="4">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <PathIcon Data="{StaticResource icons_spotify}" Width="16" Height="16"/>
                                <TextBlock Text="Connect with Spotify" FontSize="14" FontWeight="Bold" Foreground="White"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding DisconnectSpotifyCommand}"
                                IsVisible="{Binding IsSpotifyConnected}"
                            IsEnabled="{Binding IsAuthenticating, Converter={StaticResource BoolInverseConverter}}"
                                Background="#444"
                                BorderBrush="#D32F2F"
                                BorderThickness="1"
                                Padding="20,10"
                                CornerRadius="4">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="âœ•" FontSize="14" Foreground="#D32F2F"/>
                                <TextBlock Text="Disconnect" FontSize="14" FontWeight="SemiBold" Foreground="#DDD"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding TestSpotifyConnectionCommand}"
                                IsVisible="{Binding IsSpotifyConnected}"
                            IsEnabled="{Binding IsAuthenticating, Converter={StaticResource BoolInverseConverter}}"
                                Background="#333"
                                Padding="16,10"
                                CornerRadius="4"
                                ToolTip.Tip="Verify connection">
                             <StackPanel Orientation="Horizontal" Spacing="8">
                                 <TextBlock Text="ðŸ”„" FontSize="14"/>
                                 <TextBlock Text="Test Connection" FontSize="13" Foreground="#AAA"/>
                             </StackPanel>
                        </Button>

                        <Button Command="{Binding RevokeAndReAuthCommand}"
                                IsVisible="{Binding IsSpotifyConnected}"
                            IsEnabled="{Binding IsAuthenticating, Converter={StaticResource BoolInverseConverter}}"
                                Background="#8B1E1E"
                                BorderBrush="#D32F2F"
                                BorderThickness="1"
                                Padding="16,10"
                                CornerRadius="4"
                                ToolTip.Tip="Clear cached credentials and re-authenticate">
                             <StackPanel Orientation="Horizontal" Spacing="8">
                                 <TextBlock Text="ðŸ§¹" FontSize="14"/>
                                 <TextBlock Text="Revoke &amp; Re-auth" FontSize="13" Foreground="#F2F2F2"/>
                             </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Progress Bar during Auth -->
                    <ProgressBar IsIndeterminate="True" 
                                 Width="400" Height="4"
                                 Margin="180,0,0,0"
                                 HorizontalAlignment="Left"
                                 IsVisible="{Binding IsAuthenticating}"
                                 Foreground="#1DB954"/>
                </StackPanel>
            </Border>

            <!-- Save Button -->
            <Button Command="{Binding SaveSettingsCommand}"
                    Classes="primary"
                    HorizontalAlignment="Left"
                    Padding="24,12">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="ðŸ’¾" FontSize="16"/>
                    <TextBlock Text="Save Settings" FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </ScrollViewer>
</UserControl>
