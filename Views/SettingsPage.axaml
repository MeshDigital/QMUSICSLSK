<UserControl x:Class="SLSKDONET.Views.SettingsPage"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <ScrollViewer Background="{DynamicResource ThemeBackgroundBrush}">
        <StackPanel Margin="20">
            <Border Background="{DynamicResource ThemeControlMidBrush}" CornerRadius="8" Padding="16"
                    BorderBrush="{DynamicResource ThemeBorderLowBrush}" BorderThickness="1" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Download Settings" 
                               FontSize="16" FontWeight="Bold" Margin="0,0,0,12"/>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Download Folder:"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBox IsReadOnly="True" Text="{Binding DownloadPath}" Margin="0,0,8,0" Width="300"/>
                            <Button Content="Browse..." Command="{Binding BrowseDownloadPathCommand}" />
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Shared Folder:"/>
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <TextBox IsReadOnly="True" Text="{Binding SharedFolderPath}" Margin="0,0,8,0" Width="300"/>
                            <Button Content="Browse..." Command="{Binding BrowseSharedFolderCommand}" />
                        </StackPanel>
                    </Grid>
                    
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Max Concurrent Downloads:"/>
                        <TextBox Grid.Column="1" Text="{Binding MaxConcurrentDownloads}"/>
                    </Grid>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="File Name Format:"/>
                        <TextBox Grid.Column="1" Text="{Binding FileNameFormat}"
                                 ToolTip.Tip="Placeholders: {artist}, {title}, {album}, {filename}, {bitrate}, {format}, {length}, {user}"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Prevent Duplicate Downloads:"/>
                        <CheckBox Grid.Column="1" IsChecked="{Binding CheckForDuplicates, Mode=TwoWay}" 
                                  VerticalAlignment="Center" 
                                  ToolTip.Tip="If checked, will not add tracks to the queue that already exist in your Library."/>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Background="{DynamicResource ThemeControlMidBrush}" CornerRadius="8" Padding="16"
                    BorderBrush="{DynamicResource ThemeBorderLowBrush}" BorderThickness="1" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Default Search Filters" 
                               FontSize="16" FontWeight="Bold" Margin="0,0,0,12"/>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Min Bitrate:"/>
                        <TextBox Grid.Column="1" Text="{Binding MinBitrate}" Margin="0,0,8,0"/>
                        <TextBlock Grid.Column="2" Text="kbps" VerticalAlignment="Center"/>
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Preferred Formats:"/>
                        <TextBox Grid.Column="1" Text="{Binding PreferredFormats}" 
                                ToolTip.Tip="Comma-separated list (e.g., mp3,flac,aac)"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Background="{DynamicResource ThemeControlMidBrush}" CornerRadius="8" Padding="16"
                    BorderBrush="{DynamicResource ThemeBorderLowBrush}" BorderThickness="1" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="Spotify Integration" 
                               FontSize="16" FontWeight="Bold" Margin="0,0,0,12"/>

                    <TextBlock Text="By default, Spotify playlists are imported using public scraping. For more reliable access and to import private playlists or 'Liked Songs', you can provide your own Spotify API credentials."
                               TextWrapping="Wrap" Margin="0,0,0,12"/>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Use Spotify API:"/>
                        <CheckBox Grid.Column="1" IsChecked="{Binding UseSpotifyApi, Mode=TwoWay}" 
                                  VerticalAlignment="Center" 
                                  ToolTip.Tip="If checked, the application will use your API credentials below instead of public scraping."/>
                    </Grid>

                    <Grid Margin="0,0,0,12" IsEnabled="{Binding UseSpotifyApi}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Spotify Client ID:"/>
                        <TextBox Grid.Column="1" Text="{Binding SpotifyClientId}"/>
                    </Grid>

                    <Grid IsEnabled="{Binding UseSpotifyApi}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Spotify Client Secret:"/>
                        <TextBox Grid.Column="1" Text="{Binding SpotifyClientSecret}"
                                 ToolTip.Tip="Your secret is encrypted and stored securely on your machine."/>
                    </Grid>
                </StackPanel>
            </Border>

            <Button Content="ðŸ’¾ Save Settings"
                       HorizontalAlignment="Left" Command="{Binding SaveSettingsCommand}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
