<Page x:Class="SLSKDONET.Views.DownloadsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DownloadsPage"
      Background="{StaticResource BackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource SecondaryBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="16">
            <StackPanel Orientation="Horizontal">
                <ui:Button Content="Start Downloads" Icon="{ui:SymbolIcon Play24}" Appearance="Primary"
                           Command="{Binding StartDownloadsCommand}"/>
                <ui:Button Content="Cancel All" Icon="{ui:SymbolIcon Dismiss24}" Margin="8,0,0,0"
                           Command="{Binding CancelDownloadsCommand}"/>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Downloads}"
                  Style="{StaticResource ModernDataGridStyle}" Margin="0"
                  AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Extended">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Artist" Binding="{Binding Track.Artist}" Width="150"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Track.Title}" Width="*"/>
                <DataGridTextColumn Header="User" Binding="{Binding Track.Username}" Width="120"/>
                <DataGridTextColumn Header="Status" Binding="{Binding State}" Width="100"/>
                <DataGridTemplateColumn Header="Progress" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ProgressBar Value="{Binding Progress}" Maximum="1.0" Height="18"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Size (KB)" Binding="{Binding Track.Size, StringFormat={}{0:N0}}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
